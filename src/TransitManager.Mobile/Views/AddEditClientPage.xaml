<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TransitManager.Mobile.ViewModels"
             x:DataType="{x:Type viewmodels:AddEditClientViewModel}"
             x:Class="TransitManager.Mobile.Views.AddEditClientPage"
             Title="{Binding PageTitle}">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="Informations Personnelles" FontSize="Large" FontAttributes="Bold"/>
            <Entry Placeholder="Nom" Text="{Binding Client.Nom}"/>
            <Entry Placeholder="Prénom" Text="{Binding Client.Prenom}"/>
            <Entry Placeholder="Téléphone Principal" Text="{Binding Client.TelephonePrincipal}" Keyboard="Telephone"/>
            <Entry Placeholder="Email" Text="{Binding Client.Email}" Keyboard="Email"/>

            <Label Text="Adresse" FontSize="Large" FontAttributes="Bold" Margin="0,20,0,0"/>
            <Editor Placeholder="Adresse Principale" Text="{Binding Client.AdressePrincipale}" AutoSize="TextChanges"/>
            <Entry Placeholder="Ville" Text="{Binding Client.Ville}"/>
            <Entry Placeholder="Code Postal" Text="{Binding Client.CodePostal}" Keyboard="Numeric"/>
            <Entry Placeholder="Pays" Text="{Binding Client.Pays}"/>
            
            <Button Text="Enregistrer" Command="{Binding SaveCommand}" Margin="0,30,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>