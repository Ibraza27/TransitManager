<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TransitManager.Mobile.ViewModels"
             xmlns:dto="clr-namespace:TransitManager.Core.DTOs;assembly=TransitManager.Core"
             x:DataType="viewmodels:VehiculesViewModel"
             x:Class="TransitManager.Mobile.Views.VehiculesPage"
             Title="Véhicules">
    <Grid RowDefinitions="Auto, *">
		<HorizontalStackLayout Grid.Row="0" Margin="10" Spacing="10">
			<Button Text="Actualiser" Command="{Binding LoadVehiculesCommand}" />
			<Button Text="Nouveau Véhicule" Command="{Binding AddVehiculeCommand}" /> <!-- AJOUTER CE BOUTON -->
		</HorizontalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding VehiculesList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dto:VehiculeListItemDto">
					<Frame Margin="10" Padding="10" BorderColor="LightGray" CornerRadius="5">
						<Frame.GestureRecognizers>
							<TapGestureRecognizer 
								Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:VehiculesViewModel}}, Path=GoToDetailsCommand}"
								CommandParameter="{Binding .}" />
						</Frame.GestureRecognizers>					
                        <VerticalStackLayout>
                            <Label Text="{Binding Immatriculation}" FontSize="Medium" FontAttributes="Bold"/>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Marque}"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Modele}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Text="{Binding ClientNomComplet}" FontSize="Small" TextColor="Gray" FontAttributes="Italic"/>
                            <Label Text="{Binding Statut}" FontSize="Micro" HorizontalOptions="End"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <ActivityIndicator Grid.RowSpan="2" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
    </Grid>
</ContentPage>