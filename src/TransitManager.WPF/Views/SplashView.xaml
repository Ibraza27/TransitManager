<Window x:Class="TransitManager.WPF.Views.SplashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Transit Manager Loading" 
        Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">

    <Border CornerRadius="10" Background="White" BorderBrush="#DDDDDD" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo et Titre -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/Resources/Images/logo.jpg" 
                       Height="120" 
                       Margin="0,0,0,20"
                       RenderOptions.BitmapScalingMode="HighQuality"/>

                <TextBlock Text="TRANSIT MANAGER" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="HIPPOCAMPE IMPORT-EXPORT" 
                           FontSize="14" 
                           Foreground="Gray" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Spinner et Statut -->
            <StackPanel Grid.Row="1" Margin="20">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Value="0"
                             IsIndeterminate="True"
                             Width="40"
                             Height="40"
                             Foreground="{DynamicResource SecondaryHueMidBrush}"
                             Margin="0,0,0,15"/>

                <TextBlock Text="{Binding LoadingStatus}" 
                           HorizontalAlignment="Center" 
                           FontSize="14"
                           Foreground="#555"/>
            </StackPanel>
            
            <!-- Version -->
            <TextBlock Grid.Row="2" 
                       Text="{Binding Version}" 
                       HorizontalAlignment="Right" 
                       Margin="0,0,10,5" 
                       FontSize="10" 
                       Foreground="#CCC"/>
        </Grid>
    </Border>
</Window>