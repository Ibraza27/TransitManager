<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="TransitManager.Web.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="RenderMode.InteractiveServer" />
</head>
<body>
    <!-- Chargement initial -->
    <div id="app-loading">
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Chargement de l'application...</span>
            </div>
            <p class="mt-2">üöÄ Initialisation de TransitManager...</p>
        </div>
    </div>

    <!-- L'application Blazor -->
    <div id="blazor-app" style="display: none;">
        <Routes @rendermode="RenderMode.InteractiveServer" />
    </div>

    <script src="_framework/blazor.server.js"></script>
    
    <!-- === D√âBUT AJOUT : SCRIPT DE T√âL√âCHARGEMENT === -->
    <script>
        // Fonction standard Microsoft pour t√©l√©charger un flux de donn√©es
        window.downloadFileFromStream = async (fileName, contentStreamReference) => {
            const arrayBuffer = await contentStreamReference.arrayBuffer();
            const blob = new Blob([arrayBuffer]);
            const url = URL.createObjectURL(blob);
            
            const anchorElement = document.createElement('a');
            anchorElement.href = url;
            anchorElement.download = fileName ?? '';
            anchorElement.click();
            anchorElement.remove();
            URL.revokeObjectURL(url);
        }
    </script>
    <!-- === FIN AJOUT === -->

    <script>
        // Votre script existant pour le loading
        console.log("üîÑ [Script] D√©marrage de l'initialisation Blazor...");
        window.showBlazorApp = function() {
            try {
                document.getElementById('app-loading').style.display = 'none';
                document.getElementById('blazor-app').style.display = 'block';
            } catch (error) {
                console.error("‚ùå [Script] Erreur lors de l'affichage:", error);
            }
        };
        setTimeout(function() { window.showBlazorApp(); }, 3000);
    </script>
</body>
</html>