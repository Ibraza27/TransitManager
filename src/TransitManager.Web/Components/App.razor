    <!-- Le script doit √™tre ici -->
    <script>
        window.downloadFileFromStream = async (fileName, contentStreamReference) => {
            const arrayBuffer = await contentStreamReference.arrayBuffer();
            const blob = new Blob([arrayBuffer]);
            const url = URL.createObjectURL(blob);
            
            const anchorElement = document.createElement('a');
            anchorElement.href = url;
            anchorElement.download = fileName ?? '';
            anchorElement.click();
            anchorElement.remove();
            URL.revokeObjectURL(url);
        }
    </script>
    <!-- === FIN AJOUT === -->

    <script>
        // Votre script existant pour le loading
        console.log("üîÑ [Script] D√©marrage de l'initialisation Blazor...");
        window.showBlazorApp = function() {
            try {
                document.getElementById('app-loading').style.display = 'none';
                document.getElementById('blazor-app').style.display = 'block';
            } catch (error) {
                console.error("‚ùå [Script] Erreur lors de l'affichage:", error);
