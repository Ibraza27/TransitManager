                </h5>
            </div>

            <!-- SECTION UTILISATEUR RESPONSIVE -->
			<AuthorizeView>
				<Authorized Context="AuthContext">
					<div class="d-flex align-items-center gap-2">
						
						<!-- C'EST ICI QUE DOIT ÃŠTRE LA CLOCHE -->
						<NotificationCenter @rendermode="RenderMode.InteractiveServer" />
						<!-- FIN CLOCHE -->

						<span class="d-none d-md-inline fw-medium text-secondary">
							ðŸ‘‹ @AuthContext.User.Identity?.Name
						</span>
						
						<form action="/account/logout" method="post" class="d-inline">
							<AntiforgeryToken />
							<!-- Bouton Mobile : Avec Ã©moji -->
							<button type="submit" class="btn btn-outline-danger btn-sm d-md-none" title="DÃ©connexion">
								ðŸšª
							</button>
							<!-- Bouton PC : Texte complet -->
							<button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3 d-none d-md-inline-block">
								ðŸšª DÃ©connexion
							</button>
						</form>
					</div>
				</Authorized>
				<NotAuthorized>
					<a href="/login" class="btn btn-primary btn-sm rounded-pill px-3">Connexion</a>
				</NotAuthorized>
			</AuthorizeView>
        </div>

        <article class="content px-3 px-md-4">
            @Body
        </article>
    </main>
</div>

@code {
    [Inject] private IApiService ApiService { get; set; } = default!;

    private async Task Logout()
    {
        await ApiService.LogoutAsync();
        await AuthStateProvider.MarkUserAsLoggedOut();
        NavigationManager.NavigateTo("/login", forceLoad: true);
    }
}