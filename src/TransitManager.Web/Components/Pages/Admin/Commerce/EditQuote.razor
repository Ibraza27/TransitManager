    private void SetGuestClient(bool isGuest)
    {
        _isGuestClient = isGuest;
        if (isGuest)
        {
            // Clear permanent client selection when switching to guest
            SelectedClient = null;
            Model.ClientId = null;
        }
        else
        {
            // Clear guest fields when switching to permanent
            Model.GuestName = null;
            Model.GuestEmail = null;
            Model.GuestPhone = null;
        }
        StateHasChanged();
    }
    
