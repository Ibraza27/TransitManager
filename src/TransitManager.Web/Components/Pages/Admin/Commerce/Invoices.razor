    private async Task DeleteInvoice(InvoiceDto invoice)
    {
        if(await JS.InvokeAsync<bool>("confirm", "Supprimer cette facture ?"))
        {
            if(await ApiService.DeleteInvoiceAsync(invoice.Id))
            {
                InvoiceList.Remove(invoice);
                SelectedInvoice = null;
            }
        }
    }
}
