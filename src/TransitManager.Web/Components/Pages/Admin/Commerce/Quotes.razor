    private async Task UpdateQuoteStatus(QuoteDto quote, QuoteStatus newStatus)
    {
        if (quote.Status == newStatus) return; // No change

        var oldStatus = quote.Status;
        quote.Status = newStatus; // Optimistic update
        try 
        {
            await ApiService.UpdateQuoteStatusAsync(quote.Id, newStatus);
        }
        catch(Exception ex)
        {
            quote.Status = oldStatus; // Revert
            await JS.InvokeVoidAsync("alert", "Erreur mise à jour statut: " + ex.Message);
        }
    }

