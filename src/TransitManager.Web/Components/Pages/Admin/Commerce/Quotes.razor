@page "/admin/commerce/quotes"
@using Microsoft.AspNetCore.Authorization
@using TransitManager.Core.DTOs.Commerce
@using TransitManager.Core.Enums
@using TransitManager.Web.Services
@using TransitManager.Core.DTOs.Settings
@inject IApiService ApiService
@inject NavigationManager NavManager
@inject IJSRuntime JS
@inject TransitManager.Core.Interfaces.ISettingsService SettingsService
@attribute [Authorize(Roles = "Administrateur")]

<div class="d-flex flex-column" style="height: calc(100vh - 3.5rem);">
    <!-- Header Responsive -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
        <h3 class="mb-0">Devis</h3>
        <div class="d-flex gap-2">
            <a href="/admin/commerce/quotes/new" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-lg me-2"></i>Nouveau Devis
            </a>
             <div class="input-group input-group-sm" style="max-width: 250px;">
                <input type="text" class="form-control" placeholder="Rechercher..." @bind="SearchTerm" @bind:event="oninput" @onkeyup="LoadQuotes" />
                <button class="btn btn-outline-secondary" @onclick="LoadQuotes"><i class="bi bi-search"></i></button>
                <button class="btn btn-outline-secondary" @onclick="LoadQuotes" title="Actualiser"><i class="bi bi-arrow-clockwise"></i></button>
            </div>
            <select class="form-select form-select-sm" style="max-width: 150px;" @bind="FilterStatus" @bind:after="LoadQuotes">
                <option value="">Tous statuts</option>
                @foreach(var status in Enum.GetValues<QuoteStatus>())
                {
                    <option value="@status">@GetStatusName(status)</option>
                }
            </select>
        </div>
    </div>

    <!-- Responsive Split View Layout -->
    <div class="row g-0 flex-grow-1 overflow-hidden" style="min-height: 0;">
        
        <!-- List Column (Full width on mobile) -->
        <div class="col-12 col-lg-4 col-xl-3 border-end h-100 overflow-auto bg-white d-flex flex-column">
            @if (IsLoadingList)
            {
                <div class="text-center p-4">
                    <div class="spinner-border text-primary spinner-border-sm"></div>
                </div>
            }
            else if (QuoteList.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var quote in QuoteList)
                    {
                        <!-- Row Click: Selects for Right Pane Preview only. NO MODAL. -->
                        <div class="list-group-item list-group-item-action @(SelectedQuote?.Id == quote.Id ? "active-quote" : "") p-3 border-bottom cursor-pointer" @onclick="() => SelectQuote(quote, false)">
                            <div class="d-flex w-100 justify-content-between mb-1">
                                <!-- Reference Click: Sets selection AND opens Modal explicitly -->
                                <span class="fw-bold text-primary text-decoration-underline" @onclick="() => SelectQuote(quote, true)" @onclick:stopPropagation>@quote.Reference</span>
                                <div @onclick:stopPropagation>
                                    <div class="dropdown">
                                        <button class="btn btn-sm badge rounded-pill border-0 dropdown-toggle @GetStatusClass(quote.Status)" 
                                                type="button" 
                                                data-bs-toggle="dropdown" 
                                                aria-expanded="false"
                                                @onclick:stopPropagation>
                                            @GetStatusName(quote.Status)
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow">
                                            @foreach (var s in Enum.GetValues<QuoteStatus>())
                                            {
                                                <li>
                                                    <a class="dropdown-item @(s == quote.Status ? "active" : "")" 
                                                       href="#" 
                                                       @onclick="() => UpdateQuoteStatus(quote, s)"
                                                       @onclick:preventDefault>
                                                        @GetStatusName(s)
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="small text-muted mb-2">
                                <div class="fw-bold text-dark">@quote.ClientName @quote.ClientFirstname</div>
                                @if(!string.IsNullOrEmpty(quote.ClientPhone)) { <div><i class="bi bi-telephone me-1"></i> @quote.ClientPhone</div> }
                                @if(!string.IsNullOrEmpty(quote.ClientEmail)) { <div class="text-truncate"><i class="bi bi-envelope me-1"></i> @quote.ClientEmail</div> }
                                @if(!string.IsNullOrEmpty(quote.ClientAddress)) { <div class="text-truncate"><i class="bi bi-geo-alt me-1"></i> @quote.ClientAddress</div> }
                            </div>
                            <div class="d-flex w-100 justify-content-between align-items-center mt-2 border-top pt-2">
                                <small class="text-muted">@quote.DateCreated.ToString("dd/MM/yyyy")</small>
                                <span class="fw-bold text-primary">@quote.TotalTTC.ToString("C2")</span>
                            </div>
                        </div>
                    }
                    
                    @if (CurrentPage < TotalPages)
                    {
                         <button class="btn btn-light w-100 py-3 text-primary fw-bold" @onclick="LoadMore">Charger plus...</button>
                    }
                </div>
                
                 <!-- Pagination simplified -->
                <div class="p-2 border-top text-center d-flex justify-content-between align-items-center">
                    <button class="btn btn-sm btn-outline-secondary" disabled="@(CurrentPage == 1)" @onclick="PreviousPage"><i class="bi bi-chevron-left"></i></button>
                    <small>Page @CurrentPage sur @(Math.Max(1, TotalPages))</small>
                    <button class="btn btn-sm btn-outline-secondary" disabled="@(CurrentPage == TotalPages)" @onclick="NextPage"><i class="bi bi-chevron-right"></i></button>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">Aucun devis trouvé.</div>
            }
        </div>

        <!-- Detail Column (Hidden on mobile, visible on LG+) -->
        <div class="d-none d-lg-block col-lg-8 col-xl-9 h-100 overflow-auto bg-light p-4">
            @if (SelectedQuote != null)
            {
                <div class="bg-white shadow rounded-3 h-100 d-flex flex-column" style="min-height: 600px;">
                    @RenderQuoteDetail(SelectedQuote)
                </div>
            }
            else
            {
                <div class="d-flex flex-column align-items-center justify-content-center h-100 text-muted opacity-50">
                    <i class="bi bi-file-earmark-text display-1 mb-3"></i>
                    <h4>Sélectionnez un devis pour voir les détails</h4>
                </div>
            }
        </div>
    </div>
</div>

<!-- Mobile Modal for Details -->
@if (ShowMobileModal && SelectedQuote != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-fullscreen-sm-down modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title fw-bold">Détails Devis</h5>
                    <button type="button" class="btn-close" @onclick="CloseMobileModal"></button>
                </div>
                <div class="modal-body p-0">
                    @RenderQuoteDetail(SelectedQuote, true)
                </div>
            </div>
        </div>
    </div>
}

<!-- Admin Preview Modal -->
@if (ShowAdminPreviewModal && PreviewQuote != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 1060;">
        <div class="modal-dialog modal-fullscreen modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Aperçu du Devis</h5>
                    <div class="ms-auto d-flex gap-2">
                        <a href="/admin/commerce/quotes/edit/@PreviewQuote.Id" class="btn btn-secondary btn-sm" target="_blank">
                            <i class="bi bi-pencil me-2"></i>Modifier
                        </a>
                         <button class="btn btn-primary btn-sm" @onclick="() => OpenEmailModal(PreviewQuote)">
                            <i class="bi bi-send me-2"></i>Envoyer
                        </button>
                        <button class="btn btn-outline-dark btn-sm" @onclick="() => DownloadPdf(PreviewQuote)">
                            <i class="bi bi-download me-2"></i>PDF
                        </button>
                        <button type="button" class="btn-close ms-2" @onclick="CloseAdminPreview"></button>
                    </div>
                </div>
                <div class="modal-body bg-light">
                    <!-- Render the Preview Fragment here -->
                    @RenderAdminPreview(PreviewQuote)
                </div>
            </div>
        </div>
    </div>
}

<LoadingModal IsVisible="@IsLoadingPdf" />

<style>
    .active-quote {
        background-color: #f0f7ff !important;
        border-left: 4px solid #0d6efd !important;
    }
    .text-pre-wrap { white-space: pre-wrap; }
    .timeline { list-style: none; padding-left: 0; }
    .timeline li { position: relative; padding-left: 20px; margin-bottom: 10px; }
    .timeline li:before { content: '•'; position: absolute; left: 0; font-weight: bold; }
    
    /* Fix hover functionality for title rows */
    .table-hover tbody tr.title-row:hover > td,
    .table-hover tbody tr.title-row:hover {
        background-color: #d3d4d5 !important; 
        color: #000 !important;
        --bs-table-accent-bg: #d3d4d5 !important;
    }
</style>

@code {
    private List<QuoteDto> QuoteList = new();
    private QuoteDto? SelectedQuote;
    private bool IsLoadingList = true;
    
    private string SearchTerm = "";
    private string? FilterStatus = null;
    private int CurrentPage = 1;
    private int TotalPages = 1;
    private int TotalCount = 0;
    private bool IsLoading = true;
    private bool ShowMobileModal = false;

    // Helper to render Detail view (shared between Desktop Right Pane and Mobile Modal)
    private RenderFragment RenderQuoteDetail(QuoteDto quote, bool isMobile = false) => __builder =>
    {
        <div class="@(isMobile ? "p-3" : "h-100 d-flex flex-column")">
             <!-- Top Actions Header inside Detail View -->
            <div class="d-flex justify-content-between align-items-start mb-4 border-bottom pb-3 pt-3 px-3">
                <div>
                     <h2 class="fw-bold mb-1">@quote.Reference</h2>
                     <div class="d-flex align-items-center gap-2 text-muted">
                        <small>Créé le @quote.DateCreated.ToLocalTime().ToString("dd/MM/yyyy")</small>
                         <span class="badge rounded-pill @GetStatusClass(quote.Status)">@GetStatusName(quote.Status)</span>
                     </div>
                     <div class="small text-muted">Valide jusqu'au @quote.DateValidity.ToString("dd/MM/yyyy")</div>
                </div>
                 <div class="d-flex gap-2">
                     <div class="dropdown" @onclick:stopPropagation>
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Actions
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" href="/admin/commerce/quotes/edit/@quote.Id"><i class="bi bi-pencil me-2"></i>Modifier</a></li>
                            <li><button class="dropdown-item" @onclick="() => DuplicateQuote(quote)"><i class="bi bi-files me-2"></i>Dupliquer</button></li>
                            
                             @if(quote.Status == QuoteStatus.Accepted)
                            {
                                <li><button class="dropdown-item text-warning" @onclick="() => ConvertToInvoice(quote)"><i class="bi bi-arrow-repeat me-2"></i>Convertir en Facture</button></li>
                            }

                            <li>
                                <button class="dropdown-item" @onclick="() => DownloadPdf(quote)" disabled="@IsLoadingPdf">
                                    @if(IsLoadingPdf && LoadingQuoteId == quote.Id)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Téléchargement...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-file-pdf me-2"></i><span>Télécharger PDF</span>
                                    }
                                </button>
                            </li>
                            
                            @if(quote.Status != QuoteStatus.Draft)
                            {
                                <li><a class="dropdown-item" href="#" @onclick="() => OpenEmailModal(quote)" @onclick:preventDefault><i class="bi bi-envelope me-2"></i>Envoyer par Email</a></li>
                            }
                            
                            <li><hr class="dropdown-divider"></li>
                            <li><button class="dropdown-item text-danger" @onclick="() => DeleteQuote(quote)"><i class="bi bi-trash me-2"></i>Supprimer</button></li>
                        </ul>
                    </div>
                    <!-- Direct Primary Action -->
                    <div class="d-flex gap-2">
                        @if(quote.Status == QuoteStatus.Draft)
                        {
                             <button class="btn btn-outline-primary btn-sm" @onclick="() => OpenAdminPreview(quote)" @onclick:stopPropagation><i class="bi bi-eye me-1"></i>Voir</button>
                             <button class="btn btn-primary btn-sm" @onclick="() => OpenEmailModal(quote)" @onclick:stopPropagation><i class="bi bi-send me-1"></i>Envoyer</button>
                        }
                        else 
                        {
                             <button class="btn btn-outline-primary btn-sm" @onclick="() => OpenAdminPreview(quote)" @onclick:stopPropagation><i class="bi bi-eye me-1"></i>Voir</button>
                        }
                    </div>
                 </div>
            </div>

            <!-- Content -->
             <div class="flex-grow-1 overflow-auto px-4">
                <!-- Client Card -->
                <div class="card mb-4 border-0 bg-light">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted text-uppercase small fw-bold">Client</h6>
                        <div class="fs-5 fw-bold">@quote.ClientName @quote.ClientFirstname</div>
                         <div class="text-secondary"><i class="bi bi-envelope me-2"></i>@quote.ClientEmail</div>
                         <div class="text-secondary"><i class="bi bi-telephone me-2"></i>@quote.ClientPhone</div>
                    </div>
                </div>

                <!-- Message (Moved Up) -->
                 @if (!string.IsNullOrEmpty(quote.Message))
                {
                    <div class="alert alert-light border mb-3">
                        <h6 class="fw-bold text-muted text-uppercase small">Message</h6>
                        <p class="text-pre-wrap small mb-0">@quote.Message</p>
                    </div>
                }

                <!-- Payment Terms (Moved Down) -->
                @if (!string.IsNullOrEmpty(quote.PaymentTerms))
                {
                    <div class="mb-3">
                         <h6 class="fw-bold text-muted text-uppercase small">Modalités de paiement</h6>
                         <p class="small mb-0">@quote.PaymentTerms</p>
                    </div>
                }

                <!-- Lines -->
                <h6 class="text-uppercase small fw-bold text-muted mb-3">Articles</h6>
                <div class="table-responsive mb-4">
                    <table class="table table-sm table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Description</th>
                                <th>Date</th>
                                <th class="text-end">Qté</th>
                                <th class="text-center">Unité</th>
                                <th class="text-end">P.U.</th>
                                <th class="text-end">TVA</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach(var line in quote.Lines)
                        {
                            @if(line.Type == QuoteLineType.Title)
                            {
                                <tr class="title-row" style="background-color: #e2e3e5;">
                                    <td colspan="7" class="fw-bold py-2" style="color: black !important;">@line.Description</td>
                                </tr>
                            }
                            else if(line.Type == QuoteLineType.Text)
                            {
                                <tr>
                                    <td colspan="7" class="text-muted py-2">@line.Description</td>
                                </tr>
                            }
                            else if (line.Type == QuoteLineType.Subtotal)
                            {
                                <tr class="fw-bold border-top">
                                    <td colspan="2">@(string.IsNullOrWhiteSpace(line.Description) ? "Sous-total" : line.Description)</td>
                                    <td colspan="4"></td><!-- Empty Qté/Unité/P.U./TVA -->
                                    <td class="text-end fw-bold">@line.TotalHT.ToString("N2") €</td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>@line.Description</td>
                                    <td>@(line.Date.HasValue ? line.Date.Value.ToString("dd/MM/yyyy") : "-")</td> 
                                    <td class="text-end text-nowrap">@line.Quantity</td>
                                    <td class="text-center">@line.Unit</td>
                                    <td class="text-end text-nowrap">@line.UnitPrice.ToString("N2")</td>
                                    <td class="text-end">@line.VATRate%</td>
                                    <td class="text-end fw-bold text-nowrap">@line.TotalHT.ToString("N2")</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
                




                <!-- TOTALS (Moved Above History) -->
                <div class="row justify-content-end mb-4">
                    <div class="col-md-5 col-lg-4">
                        <table class="table table-sm table-borderless">
                            <tr>
                                <td class="text-end text-muted">Total HT</td>
                                <td class="text-end fw-bold">@quote.TotalHT.ToString("N2") €</td>
                            </tr>
                            <tr>
                                <td class="text-end text-muted">TVA</td>
                                <td class="text-end">@quote.TotalTVA.ToString("N2") €</td>
                            </tr>
                            <tr class="border-top">
                                <td class="text-end fs-5 fw-bold">Total TTC</td>
                                <td class="text-end fs-5 fw-bold text-primary">@quote.TotalTTC.ToString("N2") €</td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if(!string.IsNullOrEmpty(quote.FooterNote))
                {
                    <div class="mb-4 text-center mt-3 border-top pt-3">
                         <h6 class="fw-bold text-muted text-uppercase small">Note de bas de page</h6>
                         <p class="small mb-0">@quote.FooterNote</p>
                    </div>
                }

                <!-- HISTORY TIMELINE (Moved to Bottom) -->
                <h6 class="text-uppercase small fw-bold text-muted mb-3 mt-4">Historique</h6>
                <ul class="timeline small ps-3">
                     @foreach(var history in quote.History)
                    {
                         <li>
                             <small class="text-muted d-block">@history.Date.ToLocalTime().ToString("g")</small>
                             <strong>@history.Action</strong>
                             <div class="text-muted text-pre-wrap">@history.Details</div>
                             <small class="text-secondary fst-italic">@history.User</small>
                         </li>
                    }
                    @if(!quote.History.Any())
                    {
                         <li class="text-muted">Créé le <strong>@quote.DateCreated.ToLocalTime().ToString("g")</strong></li>
                    }
                </ul>
            </div>
        </div>
    };

