    private async Task DuplicateQuote(QuoteDto original)
    {
         IsLoadingPdf = true;
         StateHasChanged();
        try
        {
            var fullQuote = await ApiService.GetQuoteByIdAsync(original.Id);
            if (fullQuote == null) 
            {
                 IsLoadingPdf = false;
                 StateHasChanged();
                 await JS.InvokeVoidAsync("alert", "Impossible de récupérer le devis original.");
                 return;
            }
            
            var newQuote = new UpsertQuoteDto
            {
                Id = null,
                ClientId = fullQuote.ClientId,
                DateValidity = DateTime.UtcNow.AddDays(30),
                DateCreated = DateTime.UtcNow,
                Message = fullQuote.Message,
                FooterNote = fullQuote.FooterNote,
                PaymentTerms = fullQuote.PaymentTerms,
                DiscountValue = fullQuote.DiscountValue,
                DiscountType = fullQuote.DiscountType,
                DiscountBase = fullQuote.DiscountBase,
                DiscountScope = fullQuote.DiscountScope,
                Lines = fullQuote.Lines.Select(l => new QuoteLineDto
                {
                    Type = l.Type,
                    Date = l.Date, 
                    Description = l.Description,
                    Quantity = l.Quantity,
                    Unit = l.Unit,
                    UnitPrice = l.UnitPrice,
                    VATRate = l.VATRate,
                    Position = l.Position
                }).ToList()
            };

            var result = await ApiService.CreateOrUpdateQuoteAsync(newQuote);
            
            IsLoadingPdf = false;
            StateHasChanged();
            
            if(result != null)
            {
                // Navigate to edit the new quote
                NavManager.NavigateTo($"/admin/commerce/quotes/edit/{result.Id}");
            }
        }
        catch(Exception ex)
        {
             IsLoadingPdf = false;
             StateHasChanged();
             await JS.InvokeVoidAsync("alert", "Erreur lors de la duplication: " + ex.Message);
        }
        finally
        {
             IsLoadingPdf = false;
             StateHasChanged();
        }
    }

