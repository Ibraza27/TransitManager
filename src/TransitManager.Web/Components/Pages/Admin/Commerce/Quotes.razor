    private async Task SendQuoteEmailConfirmed(SendQuoteEmailDto dto)
    {
        if (_emailTargetQuote == null) return;
        IsLoadingPdf = true;
        StateHasChanged();
        try
        {
            // Parse recipients from comma-separated string
            var recipients = string.IsNullOrWhiteSpace(dto.Recipients) 
                ? null 
                : dto.Recipients.Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries)
                    .Select(e => e.Trim()).ToList();
            
            // Parse CC emails
            var cc = string.IsNullOrWhiteSpace(dto.Cc) 
                ? null 
                : dto.Cc.Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries)
                    .Select(e => e.Trim()).ToList();
            
            await ApiService.SendQuoteByEmailAsync(_emailTargetQuote.Id, dto.Subject, dto.Body, dto.CopyToSender, dto.TempAttachmentIds, cc, recipients);
            await ApiService.UpdateQuoteStatusAsync(_emailTargetQuote.Id, QuoteStatus.Sent);
            
            _emailTargetQuote.Status = QuoteStatus.Sent;
            _emailTargetQuote.DateSent = DateTime.UtcNow;
            
            var index = QuoteList.FindIndex(q => q.Id == _emailTargetQuote.Id);
            if (index >= 0) QuoteList[index] = _emailTargetQuote;
            
            IsLoadingPdf = false;
            StateHasChanged();
            await JS.InvokeVoidAsync("hideModal", "sendEmailModal");
            await JS.InvokeVoidAsync("alert", "Email envoyé avec succès !");
        }
        catch (Exception ex)
        {
            IsLoadingPdf = false;
            StateHasChanged();
            await JS.InvokeVoidAsync("alert", $"Erreur lors de l'envoi: {ex.Message}");
        }
    }

