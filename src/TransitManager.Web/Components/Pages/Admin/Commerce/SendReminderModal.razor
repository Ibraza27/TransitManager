@using TransitManager.Core.DTOs.Commerce
@using TransitManager.Web.Services
@inject IApiService ApiService
@inject IJSRuntime JS

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">ENVOYER UN RAPPEL PAR E-MAIL</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label">Destinataire(s)</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control mb-2" @bind="Recipients" placeholder="Séparez les emails par des virgules" />
                            <input type="text" class="form-control" placeholder="Ajouter copie (CC)..." @bind="CCEmail" />
                        </div>
                    </div>
                     <div class="mb-3 row">
                        <div class="col-sm-9 offset-sm-3">
                             <div class="form-check">
                                <input class="form-check-input" type="checkbox" @bind="CopyToSender" id="ccSenderRem">
                                <label class="form-check-label" for="ccSenderRem">
                                    Recevoir une copie
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label">Sujet</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" @bind="Subject" />
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label">Message</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" rows="6" @bind="Body"></textarea>
                            <div class="mt-2 text-end">
                                <button class="btn btn-outline-secondary btn-sm" @onclick="SaveAsTemplate"><i class="bi bi-save me-1"></i>Enregistrer comme modèle</button>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label">Pièces jointes</label>
                        <div class="col-sm-9">
                            <!-- Default Invoice PDF -->
                             <div class="d-flex align-items-center text-success mb-2">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <span>@InvoiceReference - (PDF inclus)</span>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light" @onclick="Close">Annuler</button>
                    <button type="button" class="btn btn-warning" @onclick="Send" disabled="@IsSending">
                        @if(IsSending) { <span class="spinner-border spinner-border-sm me-2"></span> }
                        Envoyer le rappel
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string RecipientEmail { get; set; } = "";
    [Parameter] public string InvoiceReference { get; set; } = "";
    [Parameter] public EventCallback<SendQuoteEmailDto> OnSend { get; set; }

    private bool IsVisible = false;
    private bool IsSending = false;
    
    private string Recipients = ""; // Editable

    private string Subject = "";
    private string Body = "";
    private bool CopyToSender = false;
    private string CCEmail = "";

    private async Task SaveAsTemplate()
    {
        try {
            await JS.InvokeVoidAsync("localStorage.setItem", "InvoiceReminderSubject", Subject);
            await JS.InvokeVoidAsync("localStorage.setItem", "InvoiceReminderBody", Body);
            await JS.InvokeVoidAsync("alert", "Modèle de rappel enregistré avec succès (localement).");
        } catch(Exception ex) {
            await JS.InvokeVoidAsync("alert", "Erreur lors de l'enregistrement: " + ex.Message);
        }
    }

    public async Task Open(string subject, string body, string email)
    {
        // Load template first
        await LoadTemplate();
        
        // Use template values if available, otherwise use passed values
        if (string.IsNullOrEmpty(Subject)) Subject = subject;
        if (string.IsNullOrEmpty(Body)) Body = body;
        
        RecipientEmail = email;
        Recipients = email; // Init
        IsVisible = true;
        StateHasChanged();
    }

    private void Close()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async Task Send()
    {
        IsSending = true;
         try
        {
             var dto = new SendQuoteEmailDto 
             { 
                 Subject = Subject, 
                 Body = Body, 
                 CopyToSender = CopyToSender,
                 Recipients = Recipients, // Map
                 Cc = CCEmail,
                 TempAttachmentIds = new List<Guid>() // Typically no extra attachments for reminders, just the PDF
             };
             await OnSend.InvokeAsync(dto);
             Close();
        }
        finally { IsSending = false; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadTemplate();
    }

    private async Task LoadTemplate()
    {
        try {
            var subject = await JS.InvokeAsync<string>("localStorage.getItem", "InvoiceReminderSubject");
            var body = await JS.InvokeAsync<string>("localStorage.getItem", "InvoiceReminderBody");
            if (!string.IsNullOrEmpty(subject)) Subject = subject;
            if (!string.IsNullOrEmpty(body)) Body = body;
        } catch {}
    }
}
