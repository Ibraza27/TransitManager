@page "/clients"
@using System.Globalization
@using TransitManager.Core.Entities
@attribute [Authorize(Roles = "Administrateur")]
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Gestion Clients - Hippocampe</PageTitle>

<div class="container-fluid mt-4">
    
    <!-- EN-T√äTE -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold"><i class="bi bi-people-fill me-2"></i>Clients</h2>
            <p class="text-muted mb-0">Gestion du portefeuille client.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-success" @onclick="CreateClient">
                <i class="bi bi-person-plus-fill me-2"></i>Nouveau Client
            </button>
            <button class="btn btn-outline-primary" @onclick="LoadClients">
                <i class="bi bi-arrow-clockwise me-2"></i>Actualiser
            </button>
        </div>
    </div>

    <!-- FILTRES -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light">
            <div class="row g-3">
                <!-- Recherche -->
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted">RECHERCHE</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" 
                               placeholder="Nom, Code, T√©l, Email..." 
                               @bind="SearchTerm" @bind:event="oninput" />
                    </div>
                </div>

                <!-- Filtre Statut -->
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">STATUT</label>
                    <select class="form-select" @bind="SelectedStatus">
                        <option value="Tous">Tous</option>
                        <option value="Actifs">Actifs</option>
                        <option value="Inactifs">Inactifs</option>
                        <option value="Fid√®les">Clients Fid√®les</option>
                        <option value="Impay√©s">Avec Impay√©s</option>
                    </select>
                </div>

                <!-- Filtre Ville (√âditable) -->
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">VILLE</label>
                    <input list="citiesList" class="form-control" 
                           placeholder="Toutes les villes..." 
                           @bind="SelectedCitySearch" @bind:event="oninput"/>
                    <datalist id="citiesList">
                        @foreach (var city in _cities)
                        {
                            <option value="@city" />
                        }
                    </datalist>
                </div>

                <!-- Bouton Effacer -->
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="ResetFilters">
                        <i class="bi bi-x-lg me-2"></i> Effacer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- TABLEAU -->
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Code</th>
                        <th>Client</th>
                        <th>T√©l√©phone</th>
                        <th>Ville</th>
                        <th class="text-center">Fid√®le</th>
                        <th class="text-center">Envois</th>
                        <th class="text-end">Impay√©s</th>
                        <th>Commentaire</th>
                        <th class="text-end pe-4" style="min-width: 120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (FilteredClients.Any())
                    {
                        @foreach (var c in FilteredClients)
                        {
                            <tr class="@(!c.Actif ? "table-secondary opacity-75" : "")">
                                <td class="ps-4 font-monospace text-primary fw-bold">@c.CodeClient</td>
                                
                                <td>
                                    <div class="fw-bold">@c.NomComplet</div>
                                    <small class="text-muted">@c.Email</small>
                                </td>
                                
                                <td>@c.TelephonePrincipal</td>
                                
                                <td>@c.Ville</td>
                                
                                <!-- Fid√©lit√© -->
                                <td class="text-center">
                                    @if (c.EstClientFidele)
                                    {
                                        <span class="badge bg-warning text-dark">‚≠ê OUI</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                
                                <!-- Envois (Bas√© sur NombreConteneursUniques ou TotalEnvois selon votre mod√®le) -->
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">@c.NombreConteneursUniques</span>
                                </td>
                                
                                <!-- Impay√©s -->
                                <td class="text-end">
                                    @if (c.Impayes > 0)
                                    {
                                        <span class="text-danger fw-bold">@c.Impayes.ToString("C0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-success small">0 ‚Ç¨</span>
                                    }
                                </td>
                                
                                <!-- Commentaire (Tronqu√©) -->
                                <td class="text-truncate" style="max-width: 150px;" title="@c.Commentaires">
                                    <small class="text-muted">@c.Commentaires</small>
                                </td>

                                <!-- Actions -->
                                <td class="text-end pe-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-outline-primary btn-sm" @onclick="() => EditClient(c.Id)" title="Modifier / D√©tails">
                                            ‚úèÔ∏è
                                        </button>
                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteClient(c)" title="Supprimer">
                                            üóëÔ∏è
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="9" class="text-center py-5 text-muted">Aucun client trouv√©.</td></tr>
                    }
                </tbody>
                <!-- Totaux -->
                @if (FilteredClients.Any())
                {
                    <tfoot class="bg-light fw-bold border-top">
                        <tr>
                            <td colspan="6" class="text-end text-secondary text-uppercase pe-3">Total Impay√©s :</td>
                            <td class="text-end text-danger">@FilteredClients.Sum(c => c.Impayes).ToString("C0")</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>

    <!-- Indicateur de chargement -->
    @if (_isLoading)
    {
        <div class="position-fixed top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center" 
             style="background: rgba(255,255,255,0.7); z-index: 9999;">
            <div class="spinner-border text-primary"></div>
        </div>
    }

</div>

@code {
    private IEnumerable<Client> _allClients = new List<Client>();
    private List<string> _cities = new();
    private bool _isLoading = true;

    // Filtres
    private string SearchTerm { get; set; } = "";
    private string SelectedStatus { get; set; } = "Tous";
    private string SelectedCitySearch { get; set; } = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) await LoadClients();
    }

    private async Task LoadClients()
    {
        _isLoading = true;
        StateHasChanged();

        try 
        {
            // On r√©cup√®re tous les clients
            var result = await ApiService.GetClientsAsync();
            if (result != null)
            {
                _allClients = result;
                // Met √† jour la liste des villes pour l'autocomplete
                _cities = _allClients
                    .Select(c => c.Ville)
                    .Where(v => !string.IsNullOrWhiteSpace(v))
                    .Distinct()
                    .OrderBy(v => v)
                    .ToList()!;
            }
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private IEnumerable<Client> FilteredClients
    {
        get
        {
            var q = _allClients;

            // 1. Recherche Texte
            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                var term = SearchTerm.ToLower();
                q = q.Where(c => 
                    c.NomComplet.ToLower().Contains(term) ||
                    c.CodeClient.ToLower().Contains(term) ||
                    c.TelephonePrincipal.Contains(term) ||
                    (c.Email?.ToLower().Contains(term) ?? false) ||
                    (c.Ville?.ToLower().Contains(term) ?? false)
                );
            }

            // 2. Filtre Ville
            if (!string.IsNullOrWhiteSpace(SelectedCitySearch))
            {

                q = q.Where(c => c.Ville != null && c.Ville.Contains(SelectedCitySearch, StringComparison.OrdinalIgnoreCase));
            }

            // 3. Filtre Statut
            switch (SelectedStatus)
            {
                case "Actifs":
                    q = q.Where(c => c.Actif);
                    break;
                case "Inactifs":
                    q = q.Where(c => !c.Actif);
                    break;
                case "Fid√®les":
                    q = q.Where(c => c.EstClientFidele);
                    break;
                case "Impay√©s":
                    q = q.Where(c => c.Impayes > 0);
                    break;
            }

            return q.OrderBy(c => c.Nom).ThenBy(c => c.Prenom);
        }
    }

    private void ResetFilters()
    {
        SearchTerm = "";
        SelectedStatus = "Tous";
        SelectedCitySearch = "";
    }

	private void CreateClient()
    {
        Navigation.NavigateTo("/client/create");
    }

    private void EditClient(Guid id)
    {
        Navigation.NavigateTo($"/client/edit/{id}");
    }

    private async Task DeleteClient(Client client)
    {
        // V√©rification de s√©curit√©
        if (client.Impayes > 0)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Impossible de supprimer {client.NomComplet} car il a des impay√©s ({client.Impayes:C0}).");
            return;
        }

        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"√ätes-vous s√ªr de vouloir supprimer le client {client.NomComplet} ?\nCette action est irr√©versible.");
        
        if (confirm)
        {
            var success = await ApiService.DeleteClientAsync(client.Id);
            if (success)
            {
                await LoadClients(); // Recharger la liste pour voir la suppression
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Erreur lors de la suppression. V√©rifiez que le client n'a pas de colis ou v√©hicules actifs.");
            }
        }
    }
}