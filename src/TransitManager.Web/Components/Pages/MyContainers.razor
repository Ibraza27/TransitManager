@page "/my-containers"
@using TransitManager.Core.Entities
@using TransitManager.Core.Enums
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using System.Linq
@attribute [Authorize]

<PageTitle>Conteneurs - Hippocampe</PageTitle>

<div class="container-fluid mt-4">
    
    <!-- En-t√™te -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold"><i class="bi bi-box-seam-fill me-2"></i>Conteneurs</h2>
            <p class="text-muted mb-0">Suivi des dossiers d'exp√©dition.</p>
        </div>
        <div class="d-flex gap-2">
            <AuthorizeView Roles="Administrateur">
                <Authorized>
                    <button class="btn btn-success" @onclick="CreateContainer">
                        <i class="bi bi-plus-lg me-2"></i>Nouveau Conteneur
                    </button>
                </Authorized>
            </AuthorizeView>
            <button class="btn btn-outline-primary" @onclick="LoadContainers">
                <i class="bi bi-arrow-clockwise me-2"></i>Actualiser
            </button>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light">
            <div class="row g-3">
                <div class="col-md-5">
                    <label class="form-label small fw-bold text-muted">RECHERCHE</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" 
                               placeholder="N¬∞ Dossier, Plomb, Compagnie, Destination..." 
                               @bind="SearchTerm" @bind:event="oninput" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">STATUT</label>
                    <select class="form-select" @bind="SelectedStatus">
                        <option value="">Tous les statuts</option>
                        @foreach (var s in Enum.GetValues<StatutConteneur>())
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>
                 <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="ResetFilters">
                        <i class="bi bi-x-lg me-2"></i> Effacer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau -->
    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <div class="text-muted mt-2">Chargement des conteneurs...</div>
        </div>
    }
    else
    {
    <div class="card shadow-sm border-0">
        <!-- Scrollbar at top using rotation trick -->
        <div class="table-responsive" style="transform: rotateX(180deg);">
            <table class="table table-hover align-middle mb-0" style="min-width: 1400px; transform: rotateX(180deg);">
                <thead class="bg-light text-secondary">
                    <tr>
                        <!-- 1. ACTIONS (First) -->
                        <th class="ps-4" style="min-width: 100px;">Actions</th>
                        
                        <!-- 2. DOSSIER -->
                        <th>N¬∞ Dossier</th>
                        
                        <th>Statut</th>
                        <th>Destination</th>
                        <th>Plomb</th>
                         <th>Compagnie</th>
                        <th>Transitaire</th>
                        <th class="text-center">R√©ception</th>
                        <th class="text-center">Chargement</th>
                        <th class="text-center">D√©part</th>
                        <th class="text-center">Arriv√©e</th>
                        <th class="text-center">Cl√¥ture</th>
                        <th>Commentaire</th>
                    </tr>
                </thead>
                <tbody>
                    @if (FilteredContainers.Any())
                    {
                        @foreach (var c in FilteredContainers)
                        {
                            <tr class="@(c.Documents.Any(d => d.Statut == StatutDocument.Manquant) ? "table-danger" : "")">
                                <!-- 1. ACTIONS -->
                                <td class="ps-4">
                                    <div class="d-flex justify-content-start gap-2">
                                        
                                        <!-- Tracking Button (Conditionnel) -->
                                        @if (!string.IsNullOrEmpty(GetTrackingUrl(c)))
                                        {
                                            <a href="@GetTrackingUrl(c)" target="_blank" class="btn btn-outline-info btn-sm" title="Suivre sur le site de la compagnie">
                                                üö¢
                                            </a>
                                        }

                                        <!-- AJOUT : Restriction Admin pour le bouton Modifier -->
                                        <AuthorizeView Roles="Administrateur">
                                            <Authorized>
                                                <button class="btn btn-outline-primary btn-sm" @onclick="() => ViewContainer(c.Id)" title="D√©tails / Modifier">
                                                    ‚úèÔ∏è
                                                </button>
                                            </Authorized>
                                        </AuthorizeView>

                                        <!-- Bouton Supprimer (Admin seulement) -->
                                        <AuthorizeView Roles="Administrateur">
                                            <Authorized>
                                                <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteContainer(c)" title="Supprimer">
                                                    üóëÔ∏è
                                                </button>
                                            </Authorized>
                                        </AuthorizeView>
                                    </div>
                                </td>

                                <!-- 2. DOSSIER (Linked for Admin) -->
                                <td class="fw-bold text-primary font-monospace">
                                    <AuthorizeView Roles="Administrateur">
                                        <Authorized>
                                             <a href="/conteneur/detail/@c.Id" class="text-decoration-none text-primary hover-opacity">
                                                 @c.NumeroDossier
                                             </a>
                                        </Authorized>
                                        <NotAuthorized>
                                             @c.NumeroDossier
                                        </NotAuthorized>
                                    </AuthorizeView>
                                </td>

                                <td>
                                    <span class="badge rounded-pill @GetStatusBadgeClass(c.Statut)">@c.Statut</span>
                                </td>
                                <td>
                                    <div class="fw-bold">@c.Destination</div>
                                    <small class="text-muted">@c.PaysDestination</small>
                                </td>
                                <td class="font-monospace small">@(c.NumeroPlomb ?? "-")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(c.NomCompagnie))
                                    {
                                        var trackingUrl = "#";
                                        var refNum = c.NumeroDossier;
                                        if (c.NomCompagnie.Contains("CMA", StringComparison.OrdinalIgnoreCase)) trackingUrl = $"https://www.cma-cgm.com/ebusiness/tracking/search?searchBy=BL&searchValue={refNum}";
                                        else if (c.NomCompagnie.Contains("MSC", StringComparison.OrdinalIgnoreCase)) trackingUrl = $"https://www.msc.com/en/track-a-shipment?reference={refNum}";
                                        
                                        if (trackingUrl != "#")
                                        {
                                            <a href="@trackingUrl" target="_blank" class="text-decoration-none fw-bold">@c.NomCompagnie <i class="bi bi-box-arrow-up-right small"></i></a>
                                        }
                                        else
                                        {
                                            @c.NomCompagnie
                                        }
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    <AuthorizeView Roles="Administrateur">
                                        <Authorized>
                                            @(c.NomTransitaire ?? "-")
                                        </Authorized>
                                        <NotAuthorized>
                                            -
                                        </NotAuthorized>
                                    </AuthorizeView>
                                </td>
                                
                                <!-- Dates -->
                                <td class="text-center small">@(c.DateReception?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td class="text-center small">@(c.DateChargement?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td class="text-center small">@(c.DateDepart?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td class="text-center small">@(c.DateArriveeDestination?.ToString("dd/MM/yyyy") ?? "-")</td>
                                <td class="text-center small">@(c.DateCloture?.ToString("dd/MM/yyyy") ?? "-")</td>
                                
                                <td class="text-truncate" style="max-width: 150px;" title="@c.Commentaires">
                                    <small class="text-muted">@c.Commentaires</small>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="13" class="text-center py-5 text-muted">Aucun conteneur trouv√©.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    }
</div>

@code {
    private IEnumerable<Conteneur> _allContainers = new List<Conteneur>();
    private bool _isLoading = true;
    private string SearchTerm { get; set; } = "";
    private StatutConteneur? SelectedStatus { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) await LoadContainers();
    }

    private async Task LoadContainers()
    {
        _isLoading = true;
        StateHasChanged(); // Force spinner
        try
        {
            var result = await ApiService.GetMyConteneursAsync();
            if (result != null)
            {
                _allContainers = result;
            }
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private IEnumerable<Conteneur> FilteredContainers
    {
        get
        {
            var q = _allContainers;

            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                var term = SearchTerm.ToLower();
                q = q.Where(c => 
                    c.NumeroDossier.ToLower().Contains(term) ||
                    (c.NumeroPlomb?.ToLower().Contains(term) ?? false) ||
                    (c.NomCompagnie?.ToLower().Contains(term) ?? false) ||
                    c.Destination.ToLower().Contains(term) ||
                    (c.NomTransitaire?.ToLower().Contains(term) ?? false)
                );
            }

            if (SelectedStatus.HasValue)
            {
                q = q.Where(c => c.Statut == SelectedStatus.Value);
            }

            return q.OrderByDescending(c => c.DateCreation);
        }
    }

    private void ResetFilters()
    {
        SearchTerm = "";
        SelectedStatus = null;
    }

    private void CreateContainer() => Navigation.NavigateTo("/conteneur/create");
    private void ViewContainer(Guid id) => Navigation.NavigateTo($"/conteneur/detail/{id}");

    private async Task DeleteContainer(Conteneur c)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Supprimer le conteneur {c.NumeroDossier} ?");
        if (confirm)
        {
            // TODO: Ajouter DeleteConteneurAsync dans ApiService
             await ApiService.DeleteConteneurAsync(c.Id); 
             await LoadContainers();
        }
    }

    private string GetStatusBadgeClass(StatutConteneur s) => s switch
    {
        StatutConteneur.Re√ßu => "bg-info text-dark",
        StatutConteneur.EnPreparation => "bg-warning text-dark",
        StatutConteneur.EnTransit => "bg-primary",
        StatutConteneur.Arrive => "bg-info",
        StatutConteneur.Livre => "bg-success",
        StatutConteneur.Cloture => "bg-secondary",
        StatutConteneur.Probleme => "bg-danger",
        _ => "bg-light text-dark border"
    };

    private string GetTrackingUrl(Conteneur c)
    {
        if (string.IsNullOrEmpty(c.NomCompagnie) || string.IsNullOrEmpty(c.NumeroDossier)) return "";
        
        var refNum = c.NumeroDossier.Trim();
        if (c.NomCompagnie.Contains("CMA", StringComparison.OrdinalIgnoreCase)) 
            return $"https://www.cma-cgm.com/ebusiness/tracking/search?searchBy=BL&searchValue={refNum}";
        
        if (c.NomCompagnie.Contains("MSC", StringComparison.OrdinalIgnoreCase)) 
            return $"https://www.msc.com/en/track-a-shipment?reference={refNum}";

        return "";
    }
}