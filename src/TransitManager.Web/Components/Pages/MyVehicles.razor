@page "/my-vehicles"
@using TransitManager.Core.Enums
@using System.Globalization
@inject IApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize]

<PageTitle>Mes V√©hicules - Hippocampe</PageTitle>

<div class="container-fluid mt-4">
    <!-- En-t√™te -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold"><i class="bi bi-car-front-fill me-2"></i>Mes V√©hicules</h2>
            <p class="text-muted mb-0">Gestion du parc automobile et suivi des exp√©ditions.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-success" @onclick="CreateNewVehicle">
                <i class="bi bi-plus-lg me-2"></i>Nouveau V√©hicule
            </button>
            <button class="btn btn-outline-primary" @onclick="LoadVehicles">
                <i class="bi bi-arrow-clockwise me-2"></i>Actualiser
            </button>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light">
            <div class="row g-3">
                <!-- Recherche globale -->
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted">RECHERCHE</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" 
                               placeholder="Immat, Client, Marque, Mod√®le..." 
                               @bind="SearchTerm" @bind:event="oninput" />
                    </div>
                </div>

                <!-- Filtre Statut -->
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted">STATUT</label>
                    <select class="form-select" @bind="SelectedStatus">
                        <option value="">Tous</option>
                        @foreach (var s in Enum.GetValues<StatutVehicule>())
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>

                <!-- Filtre Conteneur (Recherche dynamique) -->
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">CONTENEUR</label>
                    <input list="conteneursList" class="form-control" 
                           placeholder="Taper pour chercher..." 
                           @bind="SelectedContainerSearch" @bind:event="oninput"/>
                    <datalist id="conteneursList">
                        @foreach (var c in _containers)
                        {
                            <option value="@c" />
                        }
                    </datalist>
                </div>
                 <div class="col-md-1 d-flex align-items-end">
					<button class="btn btn-secondary w-100" @onclick="ResetFilters">
						<i class="bi bi-x-lg me-2"></i> Effacer
					</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau -->
    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <div class="text-muted mt-2">Chargement des v√©hicules...</div>
        </div>
    }
    else
    {
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Immatriculation</th>
                        <th>Client</th>
                        <th>V√©hicule</th>
                        <th>Conteneur</th>
                        
                        <!-- NOUVELLE COLONNE -->
                        <th>Commentaire</th> 
                        
                        <th class="text-end">Total</th>
                        <th class="text-end">Pay√©</th>
                        <th class="text-end">Restant</th>
                        <th class="text-center">Statut</th>
                        <th class="text-end pe-4" style="min-width: 120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (FilteredVehicles.Any())
                    {
                        @foreach (var v in FilteredVehicles)
                        {
                            <tr class="@(v.HasMissingDocuments ? "table-warning" : "")">
                                <td class="ps-4 fw-bold font-monospace text-primary">@v.Immatriculation</td>
                                <td>
                                    <div class="fw-bold">@v.ClientNomComplet</div>
                                    <small class="text-muted">@v.ClientTelephonePrincipal</small>
                                </td>
                                <td>
                                    <div>@v.Marque @v.Modele</div>
                                    <small class="text-muted">Ann√©e @v.Annee</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(v.ConteneurNumeroDossier))
                                    {
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-box me-1"></i> @v.ConteneurNumeroDossier
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic small">Non assign√©</span>
                                    }
                                </td>

                                <!-- NOUVELLE COLONNE : Commentaire (tronqu√© si trop long) -->
                                <td style="max-width: 150px;" class="text-truncate text-uppercase text-danger fw-bold" title="@v.Commentaires">
                                    <small>@v.Commentaires</small>
                                </td>

                                <!-- Finances -->
                                <td class="text-end fw-bold">@v.PrixTotal.ToString("C0")</td>
                                <td class="text-end text-success">@v.SommePayee.ToString("C0")</td>
                                <td class="text-end">
                                    @if(v.RestantAPayer > 0)
                                    {
                                        <span class="text-danger fw-bold">@v.RestantAPayer.ToString("C0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-success"><i class="bi bi-check-all"></i> Sold√©</span>
                                    }
                                </td>
                                
                                <td class="text-center">
                                    <span class="badge rounded-pill @GetStatusBadgeClass(v.Statut)">@v.Statut</span>
                                </td>
                                
                                <!-- ACTIONS AVEC √âMOJIS -->
                                <td class="text-end pe-4">
                                    <!-- Utilisation de d-flex et gap-2 pour l'espacement propre -->
                                    <div class="d-flex justify-content-end gap-2">
                                        
                                        <button class="btn btn-outline-primary btn-sm" 
                                                @onclick="() => EditVehicle(v.Id)" 
                                                title="Modifier">
                                            ‚úèÔ∏è <!-- √âmoji Crayon -->
                                        </button>
                                        
                                        <AuthorizeView Roles="Administrateur">
                                            <Authorized>
                                                <button class="btn btn-outline-danger btn-sm" 
                                                        @onclick="() => DeleteVehicle(v)" 
                                                        title="Supprimer">
                                                    üóëÔ∏è <!-- √âmoji Poubelle -->
                                                </button>
                                            </Authorized>
                                        </AuthorizeView>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                         <tr><td colspan="10" class="text-center py-5 text-muted">Aucun v√©hicule trouv√©.</td></tr>
                    }
                </tbody>				
				@if (FilteredVehicles.Any())
				{
					<tfoot class="bg-light fw-bold border-top">
						<tr>
							<!-- Fusionne les 5 premi√®res colonnes (Immat, Client, V√©hicule, Conteneur, Commentaire) -->
							<td colspan="5" class="text-end text-secondary text-uppercase pe-3 align-middle">Totaux :</td>
							
							<!-- Les 3 colonnes financi√®res -->
							<td class="text-end align-middle">@FilteredVehicles.Sum(v => v.PrixTotal).ToString("C0")</td>
							<td class="text-end text-success align-middle">@FilteredVehicles.Sum(v => v.SommePayee).ToString("C0")</td>
							<td class="text-end text-danger align-middle">@FilteredVehicles.Sum(v => v.RestantAPayer).ToString("C0")</td>
							
							<!-- Fusionne les 2 derni√®res colonnes (Statut, Actions) -->
							<td colspan="2"></td>
						</tr>
					</tfoot>
				}								
            </table>
        </div>
    </div>
    }

</div>

@code {
    private IEnumerable<VehiculeListItemDto> _allVehicles = new List<VehiculeListItemDto>();
    private bool _isLoading = true;
    private List<string> _containers = new();
    private string SearchTerm { get; set; } = "";
    private StatutVehicule? SelectedStatus { get; set; }
    private string SelectedContainerSearch { get; set; } = "";

    // Force le rechargement au retour sur la page
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) await LoadVehicles();
    }

    private async Task LoadVehicles()
    {
        var result = await ApiService.GetVehiculesAsync();
        if (result != null)
        {
            _allVehicles = result;
            // Met √† jour la liste pour l'autocomplete
            _containers = _allVehicles.Select(v => v.ConteneurNumeroDossier).Where(c => !string.IsNullOrEmpty(c)).Distinct().OrderBy(c => c).ToList()!;
        }
        _isLoading = false;
        StateHasChanged();
    }

    private IEnumerable<VehiculeListItemDto> FilteredVehicles
    {
        get
        {
            var q = _allVehicles;
            if (!string.IsNullOrWhiteSpace(SearchTerm))
            {
                var term = SearchTerm.ToLower();
                q = q.Where(v => 
                    v.Immatriculation.ToLower().Contains(term) ||
                    v.Marque.ToLower().Contains(term) ||
                    v.Modele.ToLower().Contains(term) ||
                    (v.ClientNomComplet?.ToLower().Contains(term) ?? false) ||
                    (v.ClientTelephonePrincipal?.Contains(term) ?? false)
                );
            }
            if (SelectedStatus.HasValue) q = q.Where(v => v.Statut == SelectedStatus.Value);
            if (!string.IsNullOrWhiteSpace(SelectedContainerSearch)) q = q.Where(v => v.ConteneurNumeroDossier == SelectedContainerSearch);
            return q;
        }
    }

    private void ResetFilters()
    {
        SearchTerm = "";
        SelectedStatus = null;
        SelectedContainerSearch = "";
    }

    private void CreateNewVehicle() => Navigation.NavigateTo("/vehicule/create");
    private void EditVehicle(Guid id) => Navigation.NavigateTo($"/vehicule/edit/{id}");
    
	private async Task DeleteVehicle(VehiculeListItemDto v)
    {
        // Demande de confirmation
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"√ätes-vous s√ªr de vouloir supprimer le v√©hicule {v.Immatriculation} ?\nCette action est irr√©versible.");
        
        if (confirm)
        {
            // Appel au service
            var success = await ApiService.DeleteVehiculeAsync(v.Id);
            
            if (success)
            {
                // Recharger la liste pour voir la disparition du v√©hicule et la mise √† jour des totaux
                await LoadVehicles();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Impossible de supprimer le v√©hicule. V√©rifiez qu'il n'est pas verrouill√© ou li√© √† d'autres donn√©es critiques.");
            }
        }
    }

    private string GetStatusBadgeClass(StatutVehicule s) => s switch
    {
        StatutVehicule.EnAttente => "bg-warning text-dark",
        StatutVehicule.Livre => "bg-success",
        StatutVehicule.Probleme => "bg-danger",
        StatutVehicule.EnTransit => "bg-primary",
        StatutVehicule.Arrive => "bg-info text-dark",
        _ => "bg-secondary"
    };
}