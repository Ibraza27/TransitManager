@page "/portal/invoice/{Token:guid}"
@layout Layout.EmptyLayout
@using TransitManager.Core.DTOs.Commerce
@using TransitManager.Core.DTOs.Settings
@using TransitManager.Core.Enums
@using TransitManager.Web.Services
@using Microsoft.JSInterop
@inject IApiService ApiService
@inject IJSRuntime JS
@inject TransitManager.Core.Interfaces.ISettingsService SettingsService
@using TransitManager.Web.Components.Shared

<div class="d-flex flex-column min-vh-100" style="background-color: #0a0f1a;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm px-2 px-md-4 fixed-top" style="z-index: 1030;">
        <a class="navbar-brand fw-bold" href="#">HIPPOCAMPE</a>
         <div class="ms-auto d-flex gap-2">
             <a href="/login" class="btn btn-outline-light btn-sm">Se connecter</a>
             <a href="/register" class="btn btn-primary btn-sm">Créer un compte</a>
        </div>
    </nav>

    <div class="flex-grow-1" style="background-color: #0a0f1a;">
        @if (IsLoading)
        {
             <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
        }
        else if (Invoice == null)
        {
            <div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh; padding-top: 56px;">
                <div class="alert alert-danger shadow-sm text-center m-4 py-4 px-5 border-0" style="max-width: 600px; background-color: rgba(220, 53, 69, 0.1); color: #ea868f; border: 1px solid #ea868f;">
                    <i class="bi bi-exclamation-triangle-fill fs-1 mb-3"></i>
                    <h4 class="fw-bold">Facture introuvable ou lien expiré</h4>
                    <p class="mb-0">Veuillez contacter l'administrateur si vous pensez qu'il s'agit d'une erreur.</p>
                </div>
            </div>
        }
        else
        {
            <!-- Action Bar (Séparée du document A4) - Padding Top pour compenser fixed-top -->
            <div class="d-flex justify-content-between align-items-center py-3 px-3 px-md-4 d-print-none" style="background-color: #0a0f1a; margin-top: 56px;">
                <h5 class="mb-0 text-light">Facture @Invoice.Reference</h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-light btn-sm" @onclick="Print" disabled="@IsLoadingPdf">
                         @if(IsLoadingPdf) { <span class="spinner-border spinner-border-sm me-1"></span> }
                         else { <i class="bi bi-printer me-1"></i> }
                         <span>Imprimer</span>
                    </button>
                    <button class="btn btn-outline-light btn-sm" @onclick="DownloadPdf" disabled="@IsLoadingPdf">
                         @if(IsLoadingPdf) { <span class="spinner-border spinner-border-sm me-1"></span> }
                         else { <i class="bi bi-download me-1"></i> }
                         <span>PDF</span>
                    </button>
                </div>
            </div>

            <!-- Document A4 -->
            <div class="d-flex justify-content-center px-3 px-md-4 pb-4" id="printableArea">
                <div class="a4-paper bg-white shadow-lg rounded-3">
                    <!-- Page Content avec vraies marges -->
                    <div class="page-content">
                    <!-- Header -->
                    <div class="row mb-5 border-bottom pb-4">
                        <div class="col-12 col-md-7 mb-3 mb-md-0">
                                <img src="/images/logo.jpg" alt="HIPPOCAMPE" style="max-height: 80px;" class="mb-3" />
                            <div class="small text-muted">
                                <strong>@_companyProfile.CompanyName - @_companyProfile.LegalStatus</strong><br/>
                                @_companyProfile.Address, @_companyProfile.ZipCode @_companyProfile.City<br/>
                                Tél: @_companyProfile.Phone - Email: @_companyProfile.Email <br/>
                                @if(!string.IsNullOrEmpty(_companyProfile.Website))
                                {
                                    <span>Site: <a href="@_companyProfile.Website" target="_blank" class="text-muted">@_companyProfile.Website</a></span>
                                }
                            </div>
                        </div>
                        <div class="col-12 col-md-5 text-md-end">
                            <h2 class="fw-bold text-uppercase text-secondary mb-3">Facture</h2>
                            <h4 class="fw-bold fs-3">@Invoice.Reference</h4>
                            <div class="text-muted mt-2">Date: @Invoice.DateCreated.ToString("dd/MM/yyyy")</div>
                            <div class="text-danger fw-bold">Echéance: @Invoice.DueDate.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <!-- Client -->
                    <div class="row mb-5 justify-content-end">
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 border">
                                <h6 class="text-uppercase text-secondary small fw-bold mb-3">Destinataire</h6>
                                <div class="fs-5 fw-bold text-dark">@Invoice.DisplayName</div>
                                <div class="text-muted">@Invoice.ClientAddress</div>
                                <div class="text-muted">@Invoice.DisplayPhone</div>
                                <div class="text-muted"><a href="mailto:@Invoice.DisplayEmail">@Invoice.DisplayEmail</a></div>
                            </div>
                        </div>
                    </div>

                    <!-- Message -->
                    @if (!string.IsNullOrEmpty(Invoice.Message))
                    {
                        <div class="mb-4">
                             <h6 class="fw-bold text-secondary text-uppercase small mb-2">Message</h6>
                             <p class="text-pre-wrap small text-muted">@Invoice.Message</p>
                        </div>
                    }

                    <!-- Terms -->
                     @if (!string.IsNullOrEmpty(Invoice.PaymentTerms))
                    {
                        <div class="mb-4">
                             <h6 class="fw-bold text-secondary text-uppercase small mb-2">Modalités de Paiement</h6>
                             <p class="text-pre-wrap small text-muted">@Invoice.PaymentTerms</p>
                        </div>
                    }

                    <!-- Lines -->
                    <div class="table-responsive mb-5">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="py-3 ps-4">Description</th>
                                    <th class="py-3 ps-4">Date</th>
                                    <th class="text-end py-3">Quantité</th>
                                    <th class="text-end py-3">Prix Unit.</th>
                                    <th class="text-end py-3">TVA</th>
                                    <th class="text-end py-3 pe-4">Total HT</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Invoice.Lines)
                                {
                                    @if(line.Type == QuoteLineType.Title)
                                    {
                                        <tr class="table-secondary title-row" style="background-color: #e2e3e5;">
                                            <td colspan="6" class="fw-bold text-uppercase py-2 ps-4" style="color: black !important;">@line.Description</td>
                                        </tr>
                                    }
                                    else if(line.Type == QuoteLineType.Text)
                                    {
                                        <tr>
                                            <td colspan="6" class="text-muted py-2 ps-4">@line.Description</td>
                                        </tr>
                                    }
                                    else if (line.Type == QuoteLineType.Subtotal)
                                    {
                                        <tr class="fw-bold border-top">
                                            <td class="ps-4 py-3" colspan="2">@(string.IsNullOrWhiteSpace(line.Description) ? "Sous-total" : line.Description)</td>
                                            <td colspan="3"></td>
                                            <td class="text-end py-3 pe-4 fw-bold">@line.TotalHT.ToString("N2") €</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td class="ps-4 py-3 fw-medium">@line.Description</td>
                                            <td class="ps-4 py-3">@(line.Date.HasValue ? line.Date.Value.ToString("dd/MM/yyyy") : "-")</td>
                                            <td class="text-end py-3 text-nowrap">@line.Quantity @line.Unit</td>
                                            <td class="text-end py-3 text-nowrap">@line.UnitPrice.ToString("N2") €</td>
                                            <td class="text-end py-3 text-nowrap">@line.VATRate %</td>
                                            <td class="text-end py-3 pe-4 text-nowrap">@line.TotalHT.ToString("N2") €</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Totals -->
                    <div class="row">
                        <div class="col-md-7"></div>
                        <div class="col-md-5">
                                <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-end text-muted">Total HT</td>
                                    <td class="text-end fw-bold">@Invoice.TotalHT.ToString("N2") €</td>
                                </tr>
                                <tr>
                                    <td class="text-end text-muted">TVA</td>
                                    <td class="text-end fw-bold">@Invoice.TotalTVA.ToString("N2") €</td>
                                </tr>
                                <tr class="border-top border-dark">
                                    <td class="text-end fs-4 fw-bold pt-3">Total TTC</td>
                                    <td class="text-end fs-4 fw-bold pt-3 text-primary">@Invoice.TotalTTC.ToString("C2")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- RIB Section -->
                    <!-- RIB Section - Police augmentée -->
                    <div class="mt-4 p-3 border rounded bg-light">
                        <h6 class="fw-bold text-secondary text-uppercase mb-2">
                            <i class="bi bi-bank me-2"></i>Coordonnées Bancaires
                        </h6>
                        <div class="row" style="font-size: 1rem;">
                            <div class="col-md-6 mb-2 mb-md-0">
                                <strong>Banque:</strong> @_bankDetails.BankName<br/>
                                <strong>Titulaire:</strong> @_bankDetails.AccountHolder
                            </div>
                            <div class="col-md-6">
                                <strong>IBAN:</strong> @_bankDetails.Iban<br/>
                                <strong>BIC:</strong> @_bankDetails.Bic
                            </div>
                        </div>
                    </div>

                     @if (!string.IsNullOrEmpty(Invoice.FooterNote))
                    {
                        <div class="mt-4 text-center border-top pt-3">
                                <h6 class="fw-bold text-secondary text-uppercase small mb-2">Note de bas de page</h6>
                                <p class="small text-muted mb-0">@Invoice.FooterNote</p>
                        </div>
                    }

                    <div class="mt-5 text-center text-muted small pt-5 border-top">
                            @_companyProfile.CompanyName - @_companyProfile.LegalStatus - @_companyProfile.Address @_companyProfile.ZipCode @_companyProfile.City<br/>
                            Numéro de SIRET: @_companyProfile.Siret - Numéro de TVA: @_companyProfile.TvaNumber - @_companyProfile.Rcs
                    </div> <!-- Fin legal footer -->
                    </div> <!-- Fin page-content -->
                </div> <!-- Fin a4-paper -->
            </div> <!-- Fin printableArea -->
        }
    </div>
</div>

<LoadingModal IsVisible="@IsLoadingPdf" Title="TRAITEMENT EN COURS..." Message="Veuillez patienter..." />

<style>
    .text-pre-wrap { white-space: pre-wrap; }
    
    /* A4 Paper Format */
    .a4-paper {
        width: 210mm;
        min-height: 297mm;
        font-size: 0.85rem;
    }
    
    /* Page Content avec vraies marges A4 - Réduit de moitié */
    .page-content {
        padding: 18px 20px;
    }
    
    @@media (max-width: 768px) {
        .a4-paper {
            width: 100%;
            min-height: auto;
            border-radius: 0;
        }
        .page-content {
            padding: 15px 18px;
        }
    }
    
    @@media print {
        .a4-paper {
            width: 210mm;
            min-height: 297mm;
            margin: 0;
            box-shadow: none;
            border-radius: 0;
        }
        .page-content {
            padding: 15mm 18mm;
        }
    }
    
    body, html {
        margin: 0 !important;
        padding: 0 !important;
        width: 100% !important;
        overflow-x: hidden !important;
        background-color: #0a0f1a !important;
    }
</style>

@code {
    [Parameter] public Guid Token { get; set; }
    private InvoiceDto? Invoice;
    private BankDetailsDto _bankDetails = new();
    private CompanyProfileDto _companyProfile = new();
    private bool IsLoading = true;
    private bool IsLoadingPdf = false;

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        try
        {
            Invoice = await ApiService.GetPublicInvoiceAsync(Token);
            _bankDetails = await SettingsService.GetSettingAsync<BankDetailsDto>("BankDetails", new());
            _companyProfile = await SettingsService.GetSettingAsync<CompanyProfileDto>("CompanyProfile", new());
        }
        catch { Invoice = null; }
        finally { IsLoading = false; }
    }

    private async Task DownloadPdf()
    {
        if (Invoice == null) return;
        IsLoadingPdf = true;
        try {
            var bytes = await ApiService.GetInvoicePdfAsync(Invoice.Id);
            using var streamRef = new DotNetStreamReference(new System.IO.MemoryStream(bytes));
            await JS.InvokeVoidAsync("downloadFileFromStream", $"Facture_{Invoice.Reference}.pdf", streamRef);
        } catch(Exception ex) { await JS.InvokeVoidAsync("alert", "Erreur: " + ex.Message); }
        finally { IsLoadingPdf = false; }
    }

    private async Task Print()
    {
        if (Invoice == null) return;
        IsLoadingPdf = true;
        try {
            var bytes = await ApiService.GetInvoicePdfAsync(Invoice.Id);
            // Open PDF in new window and trigger print
            var base64 = Convert.ToBase64String(bytes);
            await JS.InvokeVoidAsync("printPdfFromBase64", base64);
        } catch(Exception ex) { 
            await JS.InvokeVoidAsync("alert", "Erreur: " + ex.Message); 
        }
        finally { IsLoadingPdf = false; }
    }
}
