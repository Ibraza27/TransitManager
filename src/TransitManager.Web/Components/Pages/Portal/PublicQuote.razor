@page "/portal/quote/{Token:guid}"
@layout Layout.EmptyLayout
@using TransitManager.Core.DTOs.Commerce
@using TransitManager.Core.Enums
@using TransitManager.Web.Services
@using Microsoft.JSInterop
@inject IApiService ApiService
@inject IJSRuntime JS

<div class="d-flex flex-column min-vh-100 bg-light">
    <!-- Navbar simplified for Public View -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">HIPPOCAMPE</a>
            <div class="ms-auto d-flex gap-3">
                 <a href="/login" class="btn btn-outline-light btn-sm">Se connecter</a>
                 <a href="/register" class="btn btn-primary btn-sm">Créer un compte</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid px-0 px-md-4 py-0 py-md-5 flex-grow-1" style="max-width: 900px;">
        @if (IsLoading)
        {
             <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
        }
        else if (Quote == null)
        {
            <div class="alert alert-danger shadow-sm text-center">
                <h4>Devis introuvable ou expiré.</h4>
                <p>Veuillez contacter l'administrateur si vous pensez qu'il s'agit d'une erreur.</p>
            </div>
        }
        else
        {
            <!-- Action Bar (Top) -->
            <div class="d-flex justify-content-between align-items-center mb-4 d-print-none flex-wrap gap-2">
                <h4 class="mb-0 text-muted">Aperçu du devis</h4>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary btn-sm" @onclick="Print" disabled="@IsLoadingPdf">
                         @if(IsLoadingPdf) { <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span><span>Impression...</span> }
                         else { <i class="bi bi-printer me-2"></i><span>Imprimer</span> }
                    </button>
                    <button class="btn btn-outline-secondary btn-sm" @onclick="DownloadPdf" disabled="@IsLoadingPdf">
                         @if(IsLoadingPdf) { <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span><span>PDF...</span> }
                         else { <i class="bi bi-download me-2"></i><span>PDF</span> }
                    </button>
                </div>
            </div>

            <!-- Main Invoice Paper -->
            <div class="card border-0 shadow-lg shadow-md-lg mb-5" style="min-height: 800px; box-shadow: none !important;" id="printableArea">
                <div class="card-body p-1 p-md-5">
                    
                    <!-- Header with Company Info & Logo -->
                    <div class="row mb-5 border-bottom pb-4">
                        <div class="col-12 col-md-7 mb-3 mb-md-0">
                             <!-- Logo Placeholder -->
                             <img src="/images/logo.jpg" alt="HIPPOCAMPE" style="max-height: 80px;" class="mb-3" />
                            
                            <div class="small text-muted">
                                <strong>HIPPOCAMPE IMPORT EXPORT - SAS</strong><br/>
                                7 Rue Pascal<br/>
                                33370 TRESSES<br/>
                                France<br/>
                                <br/>
                                Tél: 09 81 72 45 40<br/>
                                Email: contact@hippocampeimportexport.com
                            </div>
                        </div>
                        <div class="col-12 col-md-5 text-md-end">
                            <h2 class="fw-bold text-uppercase text-secondary mb-3">Devis</h2>
                            <h4 class="fw-bold fs-3">@Quote.Reference</h4>
                            <div class="text-muted mt-2">Date: @Quote.DateCreated.ToString("dd/MM/yyyy")</div>
                            <div class="text-danger fw-bold">Valide jusqu'au: @Quote.DateValidity.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <!-- Client Info Box (Centered/Right styled like Zervant) -->
                    <div class="row mb-5 justify-content-end">
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 border">
                                <h6 class="text-uppercase text-secondary small fw-bold mb-3">Destinataire</h6>
                                <div class="fs-5 fw-bold text-dark">@Quote.ClientName @Quote.ClientFirstname</div>
                                <div class="text-muted">@Quote.ClientAddress</div>
                                <div class="text-muted">@Quote.ClientPhone</div>
                                <div class="text-muted"><a href="mailto:@Quote.ClientEmail">@Quote.ClientEmail</a></div>
                            </div>
                        </div>
                    </div>

                    <!-- Line Items -->
                    <div class="table-responsive mb-5">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="py-3 ps-4">Description</th>
                                    <th class="text-end py-3">Quantité</th>
                                    <th class="text-end py-3">Prix Unit.</th>
                                    <th class="text-end py-3">TVA</th>
                                    <th class="text-end py-3 pe-4">Total HT</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var line in Quote.Lines)
                                    {
                                        <tr class="@(line.Type == QuoteLineType.Subtotal ? "fw-bold" : "")" style="@(line.Type == QuoteLineType.Subtotal ? "border-bottom: 2px solid #000 !important;" : "")">
                                            @if(line.Type == QuoteLineType.Title)
                                            {
                                                <td colspan="5" class="ps-4 py-3 fw-bold text-uppercase bg-light">@line.Description</td>
                                            }
                                            else if(line.Type == QuoteLineType.Text)
                                            {
                                                <td colspan="5" class="ps-4 py-2 text-muted">@line.Description</td>
                                            }
                                            else if(line.Type == QuoteLineType.Subtotal)
                                            {
                                                <td colspan="4" class="ps-4 py-3 fw-bold">Sous-total</td>
                                                <td class="text-end py-3 pe-4 fw-bold">@line.TotalHT.ToString("N2") €</td>
                                            }
                                            else
                                            {
                                                <td class="ps-4 py-3 fw-medium">@line.Description</td>
                                                <td class="text-end py-3">@line.Quantity @line.Unit</td>
                                                <td class="text-end py-3">@line.UnitPrice.ToString("N2") €</td>
                                                <td class="text-end py-3">@line.VATRate %</td>
                                                <td class="text-end py-3 pe-4">@line.TotalHT.ToString("N2") €</td>
                                            }
                                        </tr>
                                    }
                            </tbody>
                        </table>
                    </div>

                     <!-- Footers & Totals -->
                    <div class="row">
                        <div class="col-md-7">
                             @if (!string.IsNullOrEmpty(Quote.Message))
                            {
                                <div class="mb-4">
                                    <h6 class="fw-bold text-secondary text-uppercase small mb-2">Message</h6>
                                    <p class="text-pre-wrap small text-muted">@Quote.Message</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Quote.PaymentTerms))
                            {
                                 <div class="mb-4">
                                    <h6 class="fw-bold text-secondary text-uppercase small mb-2">Modalités de Paiement</h6>
                                    <p class="small text-muted">@Quote.PaymentTerms</p>
                                </div>
                            }
                        </div>
                        <div class="col-md-5">
                             <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-end text-muted">Total HT</td>
                                    <td class="text-end fw-bold">@Quote.TotalHT.ToString("N2") €</td>
                                </tr>
                                <tr>
                                    <td class="text-end text-muted">TVA</td>
                                    <td class="text-end fw-bold">@Quote.TotalTVA.ToString("N2") €</td>
                                </tr>
                                <tr class="border-top border-dark">
                                    <td class="text-end fs-4 fw-bold pt-3">Total TTC</td>
                                    <td class="text-end fs-4 fw-bold pt-3 text-primary">@Quote.TotalTTC.ToString("C2")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                
                    @if(Quote.Status == QuoteStatus.Accepted)
                    {
                        <div class="alert alert-success mt-5 d-flex align-items-center justify-content-center gap-3 py-4">
                            <i class="bi bi-check-circle-fill fs-2"></i>
                            <div>
                                <div class="fw-bold fs-5">Devis accepté et signé</div>
                                <div>Le @(Quote.DateValidity.ToString("dd/MM/yyyy"))</div>
                            </div>
                        </div>
                    }
                    else if(Quote.Status == QuoteStatus.Rejected)
                    {
                          <div class="alert alert-danger mt-5 text-center">
                            <h5 class="fw-bold"><i class="bi bi-x-circle me-2"></i>Devis refusé</h5>
                             @if(!string.IsNullOrEmpty(Quote.RejectionReason))
                            {
                                <div class="mt-2">Raison: @Quote.RejectionReason</div>
                            }
                        </div>
                    }

                    <!-- Legal Footer -->
                    <div class="mt-5 text-center text-muted small pt-5 border-top">
                         HIPPOCAMPE IMPORT EXPORT - SAS - 7 Rue Pascal 33370 Tresses<br/>
                         Numéro de SIRET: 891909772 - Numéro de TVA: FR42891909772 - BORDEAUX
                    </div>

                </div>
            </div>
            
            <!-- Sticky Bottom Actions -->
            @if (Quote.Status != QuoteStatus.Accepted && Quote.Status != QuoteStatus.Rejected)
            {
                <div class="fixed-bottom bg-white border-top p-3 shadow-lg d-print-none animation-slide-up" style="z-index: 1040;">
                    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-3" style="max-width: 900px;">
                        <div class="text-center text-md-start">
                             <div class="text-uppercase small text-muted fw-bold">Montant à valider</div>
                             <div class="fs-4 fw-bold text-primary">@Quote.TotalTTC.ToString("C2")</div>
                        </div>
                        
                        <div class="d-flex gap-2 w-100 w-md-auto">
                            <button class="btn btn-outline-danger flex-grow-1" @onclick="Reject">
                                <i class="bi bi-x-lg me-2"></i>Refuser
                            </button>
                             <button class="btn btn-outline-secondary flex-grow-1" @onclick="RequestChanges">
                                <i class="bi bi-chat-text me-2"></i>Modifier / Commenter
                            </button>
                            <button class="btn btn-success flex-grow-1 px-4 fw-bold" @onclick="Accept">
                                <i class="bi bi-pen me-2"></i>ACCEPTER LE DEVIS
                            </button>
                        </div>
                    </div>
                </div>
                <div style="height: 180px;"></div> 
            }
        }
    </div>
</div>

<style>
    .text-pre-wrap { white-space: pre-wrap; }
    .animation-slide-up { animation: slideUp 0.5s ease-out; }
    @@keyframes slideUp { from { transform: translateY(100%); } to { transform: translateY(0); } }
</style>

@code {
    [Parameter] public Guid Token { get; set; }
    private QuoteDto? Quote;
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        try
        {
            Quote = await ApiService.GetPublicQuoteAsync(Token);
        }
        finally
        {
            IsLoading = false;
        }
    }
    
    private bool IsLoadingPdf = false; // New state

    private async Task DownloadPdf()
    {
        if (Quote == null) return;
        
        IsLoadingPdf = true;
        StateHasChanged();
        try 
        {
            var bytes = await ApiService.GetQuotePdfAsync(Quote.Id, Token);
            if (bytes.Length > 0)
            {
                using var streamRef = new DotNetStreamReference(new System.IO.MemoryStream(bytes));
                await JS.InvokeVoidAsync("downloadFileFromStream", $"Devis_{Quote.Reference}.pdf", streamRef);
            }
            else
            {
                 await JS.InvokeVoidAsync("alert", "Erreur lors du téléchargement du PDF.");
            }
        }
        finally
        {
            IsLoadingPdf = false;
            StateHasChanged();
        }
    }

    private async Task Print()
    {
         if (Quote == null) return;
         
        IsLoadingPdf = true;
        StateHasChanged();
        try
        {
            var bytes = await ApiService.GetQuotePdfAsync(Quote.Id, Token);
            if (bytes.Length > 0)
            {
                using var streamRef = new DotNetStreamReference(new System.IO.MemoryStream(bytes));
                await JS.InvokeVoidAsync("openPdfInNewTab", streamRef);
            }
        }
        finally
        {
            IsLoadingPdf = false;
            StateHasChanged();
        }
    }

    private async Task Accept()
    {
        if (Quote == null) return;
        
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "En cliquant sur OK, vous acceptez ce devis. Cette action vaut signature numérique.");
        if (confirmed)
        {
            await ApiService.AcceptPublicQuoteAsync(Token);
            Quote.Status = QuoteStatus.Accepted;
            await JS.InvokeVoidAsync("scroll", 0, 0); // Scroll to top to see success message
            await JS.InvokeVoidAsync("alert", "Merci ! Le devis a été accepté.");
        }
    }

    private async Task Reject()
    {
         if (Quote == null) return;
         
         string reason = await JS.InvokeAsync<string>("prompt", "Indiquez le motif du refus (optionnel) :");
         // Prompt returns null on cancel, empty string on OK with no text
         if (reason != null) 
         {
             await ApiService.RejectPublicQuoteAsync(Token, reason ?? "");
             Quote.Status = QuoteStatus.Rejected;
             Quote.RejectionReason = reason;
             await JS.InvokeVoidAsync("scroll", 0, 0);
         }
    }

    private async Task RequestChanges()
    {
         string comment = await JS.InvokeAsync<string>("prompt", "Décrivez les modifications souhaitées :");
         if (!string.IsNullOrWhiteSpace(comment))
         {
             // For now, we tread request changes as a rejection with specific reason to keep workflow simple
             // OR we could implement a specific status. Given requirements, lets send a message.
             // Since we dont have a specific endpoint for comments yet, we simulate it via Reject/Email or just Alert for MVP as per request "accompagné d'un commentaire"
             
             // Ideally: Send email to admin. for NOW:
              await JS.InvokeVoidAsync("alert", "Votre demande a été envoyée à l'équipe. Nous vous recontacterons rapidement.");
              // In real implementaion, call an API to send email to Admin with this content.
         }
    }
}
