@code {
    [Parameter] public Guid Token { get; set; }
    private QuoteDto? Quote;
    private BankDetailsDto _bankDetails = new();
    private CompanyProfileDto _companyProfile = new();
    private bool IsLoading = true;
    private bool IsLoadingPdf = false;
    private string CommentModalTitle = "Demande de modification / Commentaire";
    private string CommentModalMessage = "Veuillez indiquer vos demandes de modification ou commentaires ci-dessous :";
    private string CommentModalButtonClass = "btn-secondary";

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        try
        {
            Quote = await ApiService.GetPublicQuoteAsync(Token);
            _bankDetails = await SettingsService.GetSettingAsync<BankDetailsDto>("BankDetails", new());
            _companyProfile = await SettingsService.GetSettingAsync<CompanyProfileDto>("CompanyProfile", new());

            // Notification: Devis Consult√©
            if (Quote != null)
            {
                await NotificationService.CreateAndSendAsync(
                    "üìÑ Devis Consult√©",
                    $"Le devis {Quote.Reference} a √©t√© consult√© par le client.",
                    null, // Admins
                    CategorieNotification.Commerce,
                    actionUrl: $"/admin/commerce/quotes?id={Quote.Id}",
                    relatedEntityId: Quote.Id,
                    relatedEntityType: "Quote"
                );
            }
        }
        catch { Quote = null; }
        finally { IsLoading = false; }
    }
    
    // ... DownloadPdf and Print methods unchanged ...

    private async Task DownloadPdf()
    {
        if (Quote == null) return;
        
        IsLoadingPdf = true;
        StateHasChanged();
        try 
        {
            var bytes = await ApiService.GetQuotePdfAsync(Quote.Id, Token);
            if (bytes.Length > 0)
            {
                using var streamRef = new DotNetStreamReference(new System.IO.MemoryStream(bytes));
                await JS.InvokeVoidAsync("downloadFileFromStream", $"Devis_{Quote.Reference}.pdf", streamRef);
            }
            else
            {
                 await JS.InvokeVoidAsync("alert", "Erreur lors du t√©l√©chargement du PDF.");
            }
        }
        finally
        {
            IsLoadingPdf = false;
            StateHasChanged();
        }
    }

    private async Task Print()
    {
         if (Quote == null) return;
         
        IsLoadingPdf = true;
        StateHasChanged();
        try
        {
            var bytes = await ApiService.GetQuotePdfAsync(Quote.Id, Token);
            if (bytes.Length > 0)
            {
                using var streamRef = new DotNetStreamReference(new System.IO.MemoryStream(bytes));
                await JS.InvokeVoidAsync("printFileFromStream", streamRef);
            }
        }
        catch (Exception ex)
        {
             await JS.InvokeVoidAsync("alert", "Erreur lors de l'impression : " + ex.Message);
        }
        finally
        {
            IsLoadingPdf = false;
            StateHasChanged();
        }
    }

    private async Task Accept()
    {
        if (Quote == null) return;
        
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "En cliquant sur OK, vous acceptez ce devis. Cette action vaut signature num√©rique.");
        if (confirmed)
        {
             IsLoadingPdf = true;
             StateHasChanged();
             try
             {
                await ApiService.AcceptPublicQuoteAsync(Token);
                Quote.Status = QuoteStatus.Accepted;
                
                // Notification: Devis Accept√©
                await NotificationService.CreateAndSendAsync(
                    "‚úÖ Devis Accept√©",
                    $"Le devis {Quote?.Reference} a √©t√© ACCEPT√â par le client !",
                    null,
                    CategorieNotification.Commerce,
                    actionUrl: $"/admin/commerce/quotes?id={Quote?.Id}",
                    relatedEntityId: Quote?.Id,
                    relatedEntityType: "Quote",
                    priorite: PrioriteNotification.Normale
                );

                await JS.InvokeVoidAsync("scroll", 0, 0); // Scroll to top to see success message
                await JS.InvokeVoidAsync("alert", "Merci ! Le devis a √©t√© accept√©.");
             }
             catch(Exception ex)
             {
                 await JS.InvokeVoidAsync("alert", "Erreur : " + ex.Message);
             }
             finally
             {
                IsLoadingPdf = false;
                StateHasChanged();
             }
        }
    }

    // --- Comment Modal Logic ---
    private bool IsCommentModalVisible = false;

    private Func<string, Task>? OnCommentConfirmAction;

    private void OpenCommentModal(string title, string message, string btnClass, Func<string, Task> action)
    {
        CommentModalTitle = title;
        CommentModalMessage = message;
        CommentModalButtonClass = btnClass;
        OnCommentConfirmAction = action;
        IsCommentModalVisible = true;
    }

    private async Task OnCommentModalConfirm(string comment)
    {
        IsCommentModalVisible = false;
        if (OnCommentConfirmAction != null)
        {
            await OnCommentConfirmAction(comment);
        }
    }

    private void OnCommentModalCancel()
    {
        IsCommentModalVisible = false;
    }

    private void Reject()
    {
         if (Quote == null) return;
         OpenCommentModal(
             "Refuser le devis", 
             "Indiquez le motif du refus (optionnel) :", 
             "btn-danger",
             async (reason) => await ProcessReject(reason)
         );
    }

    private async Task ProcessReject(string reason)
    {
         IsLoadingPdf = true;
         StateHasChanged();
         try
         {
             await ApiService.RejectPublicQuoteAsync(Token, reason ?? "");
             Quote.Status = QuoteStatus.Rejected;
             Quote.RejectionReason = reason;

             // Notification: Devis Refus√©
             await NotificationService.CreateAndSendAsync(
                    "‚ùå Devis Refus√©",
                    $"Le devis {Quote?.Reference} a √©t√© REFUS√â. Motif: {reason}",
                    null,
                    CategorieNotification.Commerce,
                    actionUrl: $"/admin/commerce/quotes?id={Quote?.Id}",
                    relatedEntityId: Quote?.Id,
                    relatedEntityType: "Quote",
                    priorite: PrioriteNotification.Normale
             );

             await JS.InvokeVoidAsync("scroll", 0, 0);
         }
         catch(Exception ex)
         {
             await JS.InvokeVoidAsync("alert", "Erreur : " + ex.Message);
         }
         finally
         {
            IsLoadingPdf = false;
            StateHasChanged();
         }
    }

    private void RequestChanges()
    {
         if (Quote == null) return;
         OpenCommentModal(
             "Demander une modification", 
             "D√©crivez les modifications souhait√©es :", 
             "btn-warning text-dark",
             async (comment) => await ProcessRequestChanges(comment)
         );
    }

    private async Task ProcessRequestChanges(string comment)
    {
         IsLoadingPdf = true;
         StateHasChanged();
         try
         {
             await ApiService.RequestChangesPublicQuoteAsync(Token, comment);
             Quote.Status = QuoteStatus.ChangeRequested;
             
             // Notification: Modification Demand√©e
             await NotificationService.CreateAndSendAsync(
                "‚úèÔ∏è Modification Demand√©e",
                $"Le client demande une modification sur le devis {Quote?.Reference}. D√©tails: {comment}",
                null,
                CategorieNotification.Commerce,
                actionUrl: $"/admin/commerce/quotes?id={Quote?.Id}",
                relatedEntityId: Quote?.Id,
                relatedEntityType: "Quote",
                priorite: PrioriteNotification.Normale
             );

             // Reload to get fresh history
             Quote = await ApiService.GetPublicQuoteAsync(Token);
             
             await JS.InvokeVoidAsync("scroll", 0, 0);
             await JS.InvokeVoidAsync("alert", "Votre demande a √©t√© envoy√©e √† l'√©quipe. Nous vous recontacterons rapidement.");
         }
         catch(Exception ex)
         {
             await JS.InvokeVoidAsync("alert", "Erreur : " + ex.Message);
         }
         finally
         {
            IsLoadingPdf = false;
            StateHasChanged();
         }
    }
}
