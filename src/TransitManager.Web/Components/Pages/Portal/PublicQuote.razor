    IsVisible="@IsCommentModalVisible" 
    Title="@CommentModalTitle" 
    Message="@CommentModalMessage" 
    ConfirmText="Envoyer" 
    ConfirmButtonClass="@CommentModalButtonClass"
    OnConfirm="OnCommentModalConfirm" 
    OnCancel="OnCommentModalCancel" />

