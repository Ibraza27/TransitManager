@code {
    [Parameter] public Guid Token { get; set; }
    private QuoteDto? Quote;
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        IsLoading = true;
        try
        {
            Quote = await ApiService.GetPublicQuoteAsync(Token);
        }
        finally
        {
            IsLoading = false;
        }
    }
    
    private bool IsLoadingPdf = false; // New state

    private async Task DownloadPdf()
    {
        if (Quote == null) return;
        
        IsLoadingPdf = true;
        StateHasChanged();
        try 
        {
            var bytes = await ApiService.GetQuotePdfAsync(Quote.Id, Token);
            if (bytes.Length > 0)
            {
                using var streamRef = new DotNetStreamReference(new System.IO.MemoryStream(bytes));
                await JS.InvokeVoidAsync("downloadFileFromStream", $"Devis_{Quote.Reference}.pdf", streamRef);
            }
            else
            {
                 await JS.InvokeVoidAsync("alert", "Erreur lors du téléchargement du PDF.");
            }
        }
        finally
        {
            IsLoadingPdf = false;
            StateHasChanged();
        }
    }

    private async Task Print()
    {
         if (Quote == null) return;
         
        IsLoadingPdf = true;
        StateHasChanged();
        try
        {
            var bytes = await ApiService.GetQuotePdfAsync(Quote.Id, Token);
            if (bytes.Length > 0)
            {
                using var streamRef = new DotNetStreamReference(new System.IO.MemoryStream(bytes));
                await JS.InvokeVoidAsync("printFileFromStream", streamRef);
            }
        }
        catch (Exception ex)
        {
             await JS.InvokeVoidAsync("alert", "Erreur lors de l'impression : " + ex.Message);
        }
        finally
        {
            IsLoadingPdf = false;
            StateHasChanged();
        }
    }

    private async Task Accept()
    {
        if (Quote == null) return;
        
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "En cliquant sur OK, vous acceptez ce devis. Cette action vaut signature numérique.");
        if (confirmed)
        {
             IsLoadingPdf = true;
             StateHasChanged();
             try
             {
                await ApiService.AcceptPublicQuoteAsync(Token);
                Quote.Status = QuoteStatus.Accepted;
                await JS.InvokeVoidAsync("scroll", 0, 0); // Scroll to top to see success message
                await JS.InvokeVoidAsync("alert", "Merci ! Le devis a été accepté.");
             }
             catch(Exception ex)
             {
                 await JS.InvokeVoidAsync("alert", "Erreur : " + ex.Message);
             }
             finally
             {
                IsLoadingPdf = false;
                StateHasChanged();
             }
        }
    }

    // --- Comment Modal Logic ---
    private bool IsCommentModalVisible = false;
    private string CommentModalTitle = "";
    private string CommentModalMessage = "";
    private string CommentModalButtonClass = "btn-primary";
    private Func<string, Task>? OnCommentConfirmAction;

    private void OpenCommentModal(string title, string message, string btnClass, Func<string, Task> action)
    {
        CommentModalTitle = title;
        CommentModalMessage = message;
        CommentModalButtonClass = btnClass;
        OnCommentConfirmAction = action;
        IsCommentModalVisible = true;
    }

    private async Task OnCommentModalConfirm(string comment)
    {
        IsCommentModalVisible = false;
        if (OnCommentConfirmAction != null)
        {
            await OnCommentConfirmAction(comment);
        }
    }

    private void OnCommentModalCancel()
    {
        IsCommentModalVisible = false;
    }

    private void Reject()
    {
         if (Quote == null) return;
         OpenCommentModal(
             "Refuser le devis", 
             "Indiquez le motif du refus (optionnel) :", 
             "btn-danger",
             async (reason) => await ProcessReject(reason)
         );
    }

    private async Task ProcessReject(string reason)
    {
         IsLoadingPdf = true;
         StateHasChanged();
         try
         {
             await ApiService.RejectPublicQuoteAsync(Token, reason ?? "");
             Quote.Status = QuoteStatus.Rejected;
             Quote.RejectionReason = reason;
             await JS.InvokeVoidAsync("scroll", 0, 0);
         }
         catch(Exception ex)
         {
             await JS.InvokeVoidAsync("alert", "Erreur : " + ex.Message);
         }
         finally
         {
            IsLoadingPdf = false;
            StateHasChanged();
         }
    }

    private void RequestChanges()
    {
         if (Quote == null) return;
         OpenCommentModal(
             "Demander une modification", 
             "Décrivez les modifications souhaitées :", 
             "btn-warning text-dark",
             async (comment) => await ProcessRequestChanges(comment)
         );
    }

    private async Task ProcessRequestChanges(string comment)
    {
         IsLoadingPdf = true;
         StateHasChanged();
         try
         {
             await ApiService.RequestChangesPublicQuoteAsync(Token, comment);
             Quote.Status = QuoteStatus.ChangeRequested;
             
             // Reload to get fresh history
             Quote = await ApiService.GetPublicQuoteAsync(Token);
             
             await JS.InvokeVoidAsync("scroll", 0, 0);
             await JS.InvokeVoidAsync("alert", "Votre demande a été envoyée à l'équipe. Nous vous recontacterons rapidement.");
         }
         catch(Exception ex)
         {
             await JS.InvokeVoidAsync("alert", "Erreur : " + ex.Message);
         }
         finally
         {
            IsLoadingPdf = false;
            StateHasChanged();
         }
    }
}
