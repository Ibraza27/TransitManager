@page "/portal/quote/{Token:guid}"
@layout Layout.EmptyLayout
@using TransitManager.Core.DTOs.Commerce
@using TransitManager.Core.DTOs.Settings
@using TransitManager.Core.Enums
@using TransitManager.Web.Services
@using Microsoft.JSInterop
@inject IApiService ApiService
@inject IJSRuntime JS
@inject TransitManager.Core.Interfaces.ISettingsService SettingsService
@inject TransitManager.Core.Interfaces.INotificationService NotificationService
@using TransitManager.Web.Components.Shared

<div class="d-flex flex-column min-vh-100" style="background-color: #0a0f1a;">
    <!-- ... (Navbar remains the same) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm px-2 px-md-4 fixed-top" style="z-index: 1030;">
        <a class="navbar-brand fw-bold" href="#">HIPPOCAMPE</a>
        <div class="ms-auto d-flex gap-2">
             <a href="/login" class="btn btn-outline-light btn-sm">Se connecter</a>
             <a href="/register" class="btn btn-primary btn-sm">Cr√©er un compte</a>
        </div>
    </nav>

    <div class="flex-grow-1" style="background-color: #0a0f1a;">
        @if (IsLoading)
        {
             <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
        }
        else if (Quote == null)
        {
            <div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh; padding-top: 56px;">
                <div class="alert alert-danger shadow-sm text-center m-4 py-4 px-5 border-0" style="max-width: 600px; background-color: rgba(220, 53, 69, 0.1); color: #ea868f; border: 1px solid #ea868f;">
                    <i class="bi bi-exclamation-triangle-fill fs-1 mb-3"></i>
                    <h4 class="fw-bold">Devis introuvable ou expir√©</h4>
                    <p class="mb-0">Veuillez contacter l'administrateur si vous pensez qu'il s'agit d'une erreur.</p>
                </div>
            </div>
        }
        else
        {
            <!-- ... (Keep existing UI code unchanged until @code block) ... -->
            <!-- Action Bar -->
            <div class="d-flex justify-content-between align-items-center py-3 px-3 px-md-4 d-print-none" style="background-color: #0a0f1a; margin-top: 56px;">
                <h5 class="mb-0 text-light">Aper√ßu du devis</h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-light btn-sm" @onclick="Print" disabled="@IsLoadingPdf">
                         @if(IsLoadingPdf) { <span class="spinner-border spinner-border-sm me-1"></span> }
                         else { <i class="bi bi-printer me-1"></i> }
                         <span>Imprimer</span>
                    </button>
                    <button class="btn btn-outline-light btn-sm" @onclick="DownloadPdf" disabled="@IsLoadingPdf">
                         @if(IsLoadingPdf) { <span class="spinner-border spinner-border-sm me-1"></span> }
                         else { <i class="bi bi-download me-1"></i> }
                         <span>PDF</span>
                    </button>
                </div>
            </div>

            <!-- Document A4 -->
            <div class="d-flex justify-content-center px-3 px-md-4 pb-4" id="printableArea">
                <div class="a4-paper bg-white shadow-lg rounded-3">
                    <div class="page-content">
                    <!-- Header with Company Info & Logo -->
                    <div class="row mb-5 border-bottom pb-4">
                        <div class="col-12 col-md-7 mb-3 mb-md-0">
                                <img src="/images/logo.jpg" alt="HIPPOCAMPE" style="max-height: 80px;" class="mb-3" />
                            
                            <div class="small text-muted">
                                <strong>@_companyProfile.CompanyName - @_companyProfile.LegalStatus</strong><br/>
                                @_companyProfile.Address<br/>
                                @_companyProfile.ZipCode @_companyProfile.City<br/>
                                @_companyProfile.Country<br/>
                                <br/>
                                T√©l: @_companyProfile.Phone<br/>
                                Email: @_companyProfile.Email<br/>
                                @if(!string.IsNullOrEmpty(_companyProfile.Website))
                                {
                                    <span>Site: <a href="@_companyProfile.Website" target="_blank" class="text-muted">@_companyProfile.Website</a></span>
                                }
                            </div>
                        </div>
                        <div class="col-12 col-md-5 text-md-end">
                            <h2 class="fw-bold text-uppercase text-secondary mb-3">Devis</h2>
                            <h4 class="fw-bold fs-3">@Quote.Reference</h4>
                            <div class="text-muted mt-2">Date: @Quote.DateCreated.ToString("dd/MM/yyyy")</div>
                            <div class="text-danger fw-bold">Valide jusqu'au: @Quote.DateValidity.ToString("dd/MM/yyyy")</div>
                        </div>
                    </div>

                    <!-- Client Info Box -->
                    <div class="row mb-5 justify-content-end">
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-3 border">
                                <h6 class="text-uppercase text-secondary small fw-bold mb-3">Destinataire</h6>
                                <div class="fs-5 fw-bold text-dark">@Quote.DisplayName</div>
                                <div class="text-muted">@Quote.ClientAddress</div>
                                <div class="text-muted">@Quote.DisplayPhone</div>
                                <div class="text-muted"><a href="mailto:@Quote.DisplayEmail">@Quote.DisplayEmail</a></div>
                            </div>
                        </div>
                    </div>

                    <!-- Message -->
                    @if (!string.IsNullOrEmpty(Quote.Message))
                    {
                        <div class="mb-4">
                             <h6 class="fw-bold text-secondary text-uppercase small mb-2">Message</h6>
                             <p class="text-pre-wrap small text-muted">@Quote.Message</p>
                        </div>
                    }

                    <!-- Payment Terms -->
                    @if (!string.IsNullOrEmpty(Quote.PaymentTerms))
                    {
                            <div class="mb-4">
                            <h6 class="fw-bold text-secondary text-uppercase small mb-2">Modalit√©s de Paiement</h6>
                            <p class="small text-muted">@Quote.PaymentTerms</p>
                        </div>
                    }

                    <!-- Line Items -->
                    <div class="table-responsive mb-5">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="py-3 ps-4">Description</th>
                                    <th class="py-3 ps-4">Date</th>
                                    <th class="text-end py-3">Quantit√©</th>
                                    <th class="text-end py-3">Prix Unit.</th>
                                    <th class="text-end py-3">TVA</th>
                                    <th class="text-end py-3 pe-4">Total HT</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Quote.Lines)
                                {
                                    @if(line.Type == QuoteLineType.Title)
                                    {
                                        <tr class="table-secondary title-row" style="background-color: #e2e3e5;">
                                            <td colspan="6" class="fw-bold text-uppercase py-2 ps-4" style="color: black !important;">@line.Description</td>
                                        </tr>
                                    }
                                    else if(line.Type == QuoteLineType.Text)
                                    {
                                        <tr>
                                            <td colspan="6" class="text-muted py-2 ps-4">@line.Description</td>
                                        </tr>
                                    }
                                    else if (line.Type == QuoteLineType.Subtotal)
                                    {
                                        <tr class="fw-bold border-top">
                                            <td class="ps-4 py-3" colspan="2">@(string.IsNullOrWhiteSpace(line.Description) ? "Sous-total" : line.Description)</td>
                                            <td colspan="3"></td>
                                            <td class="text-end py-3 pe-4 fw-bold">@line.TotalHT.ToString("N2") ‚Ç¨</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td class="ps-4 py-3 fw-medium">@line.Description</td>
                                            <td class="ps-4 py-3">@(line.Date.HasValue ? line.Date.Value.ToString("dd/MM/yyyy") : "-")</td>
                                            <td class="text-end py-3 text-nowrap">@line.Quantity @line.Unit</td>
                                            <td class="text-end py-3 text-nowrap">@line.UnitPrice.ToString("N2") ‚Ç¨</td>
                                            <td class="text-end py-3 text-nowrap">@line.VATRate %</td>
                                            <td class="text-end py-3 pe-4 text-nowrap">@line.TotalHT.ToString("N2") ‚Ç¨</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Footers & Totals -->
                    <div class="row">
                        <div class="col-md-7">
                        </div>
                        <div class="col-md-5">
                                <table class="table table-sm table-borderless">
                                <tr>
                                    <td class="text-end text-muted">Total HT</td>
                                    <td class="text-end fw-bold">@Quote.TotalHT.ToString("N2") ‚Ç¨</td>
                                </tr>
                                <tr>
                                    <td class="text-end text-muted">TVA</td>
                                    <td class="text-end fw-bold">@Quote.TotalTVA.ToString("N2") ‚Ç¨</td>
                                </tr>
                                <tr class="border-top border-dark">
                                    <td class="text-end fs-4 fw-bold pt-3">Total TTC</td>
                                    <td class="text-end fs-4 fw-bold pt-3 text-primary">@Quote.TotalTTC.ToString("C2")</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- RIB Section -->
                    <div class="mt-4 p-3 border rounded bg-light">
                        <h6 class="fw-bold text-secondary text-uppercase mb-2">
                            <i class="bi bi-bank me-2"></i>Coordonn√©es Bancaires
                        </h6>
                        <div class="row" style="font-size: 1rem;">
                            <div class="col-md-6 mb-2 mb-md-0">
                                <strong>Banque:</strong> @_bankDetails.BankName<br/>
                                <strong>Titulaire:</strong> @_bankDetails.AccountHolder
                            </div>
                            <div class="col-md-6">
                                <strong>IBAN:</strong> @_bankDetails.Iban<br/>
                                <strong>BIC:</strong> @_bankDetails.Bic
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Quote.FooterNote))
                    {
                        <div class="mt-4 text-center border-top pt-3">
                                <h6 class="fw-bold text-secondary text-uppercase small mb-2">Note de bas de page</h6>
                                <p class="small text-muted mb-0">@Quote.FooterNote</p>
                        </div>
                    }
                    
                    <!-- Status Banners -->
                     @if(Quote.Status == QuoteStatus.Accepted)
                    {
                        <div class="alert alert-success mt-5 d-flex align-items-center justify-content-center gap-3 py-4">
                            <i class="bi bi-check-circle-fill fs-2"></i>
                            <div>
                                <div class="fw-bold fs-5">Devis accept√© et sign√©</div>
                                <div>Le @(Quote.DateValidity.ToString("dd/MM/yyyy"))</div>
                            </div>
                        </div>
                    }
                    else if(Quote.Status == QuoteStatus.Rejected)
                    {
                          <div class="alert alert-danger mt-5 text-center">
                            <h5 class="fw-bold"><i class="bi bi-x-circle me-2"></i>Devis refus√©</h5>
                             @if(!string.IsNullOrEmpty(Quote.RejectionReason))
                            {
                                <div class="mt-2">Raison: @Quote.RejectionReason</div>
                            }
                        </div>
                    }
                    else if(Quote.Status == QuoteStatus.ChangeRequested)
                    {
                          <div class="alert alert-warning mt-5 text-center">
                            <h5 class="fw-bold"><i class="bi bi-pencil-square me-2"></i>Demande de modification envoy√©e</h5>
                             @if(Quote.History.Any(h => h.Action == "Modification demand√©e"))
                            {
                                var lastRequest = Quote.History.OrderByDescending(h => h.Date).FirstOrDefault(h => h.Action == "Modification demand√©e");
                                if(lastRequest != null)
                                {
                                    <div class="mt-2 fst-italic">" @lastRequest.Details "</div>
                                }
                            }
                        </div>
                    }

                    <!-- Legal Footer -->
                    <div class="mt-5 text-center text-muted small pt-5 border-top">
                            @_companyProfile.CompanyName - @_companyProfile.LegalStatus - @_companyProfile.Address @_companyProfile.ZipCode @_companyProfile.City<br/>
                            Num√©ro de SIRET: @_companyProfile.Siret - Num√©ro de TVA: @_companyProfile.TvaNumber - @_companyProfile.Rcs
                    </div>
                    </div>
                </div>
            </div>
            
            <!-- Sticky Bottom Actions -->
            @if (Quote.Status != QuoteStatus.Accepted && Quote.Status != QuoteStatus.Rejected)
            {
                <div class="fixed-bottom bg-white border-top p-3 shadow-lg d-print-none animation-slide-up" style="z-index: 1040;">
                    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-3" style="max-width: 900px;">
                        <div class="text-center text-md-start">
                             <div class="text-uppercase small text-muted fw-bold">Montant √† valider</div>
                             <div class="fs-4 fw-bold text-primary">@Quote.TotalTTC.ToString("C2")</div>
                        </div>
                        
                        <div class="d-flex gap-2 w-100 w-md-auto">
                            <button class="btn btn-outline-danger flex-grow-1" @onclick="Reject">
                                <i class="bi bi-x-lg me-2"></i>Refuser
                            </button>
                             <button class="btn btn-outline-secondary flex-grow-1" @onclick="RequestChanges">
                                <i class="bi bi-chat-text me-2"></i>Modifier / Commenter
                            </button>
                            <button class="btn btn-success flex-grow-1 px-4 fw-bold" @onclick="Accept">
                                <i class="bi bi-pen me-2"></i>ACCEPTER LE DEVIS
                            </button>
                        </div>
                    </div>
                </div>
                <div style="height: 180px;"></div> 
            }
        }
    </div>
</div>

