@page "/register"
@using System.ComponentModel.DataAnnotations
@using TransitManager.Core.DTOs
@layout TransitManager.Web.Components.Layout.EmptyLayout 
@inject IApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Inscription - Hippocampe</PageTitle>

<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100" style="background: radial-gradient(circle at center, rgba(38,103,255,0.05), transparent);">
    <div class="row w-100 justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="glass-panel p-5 animate__animated animate__fadeInUp">
                <div class="text-center mb-5">
                    <img src="images/logo.jpg" alt="Logo" height="70" class="mb-3 rounded shadow-sm" />
                    <h3 class="fw-bold text-gradient">Créer mon compte</h3>
                    <p class="text-muted small text-uppercase fw-bold" style="letter-spacing: 1px;">Hippocampe Import-Export</p>
                </div>

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="alert alert-danger border-0 d-flex align-items-center mb-4 shadow-sm">
                        <i class="bi bi-exclamation-circle-fill me-3 fs-5"></i>
                        <div>
                            <strong>Erreur</strong>
                            <div class="small">@_errorMessage</div>
                        </div>
                    </div>
                }

                <EditForm Model="@_registerModel" OnValidSubmit="HandleRegistration">
                    <DataAnnotationsValidator />
                    
                    <div class="row g-3">
                        <!-- Identité -->
                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">Prénom</label>
                            <InputText @bind-Value="_registerModel.Prenom" class="form-control bg-white border-0 shadow-sm" placeholder="John" />
                            <ValidationMessage For="@(() => _registerModel.Prenom)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">Nom</label>
                            <InputText @bind-Value="_registerModel.Nom" class="form-control bg-white border-0 shadow-sm" placeholder="Doe" />
                            <ValidationMessage For="@(() => _registerModel.Nom)" />
                        </div>
                        
                        <div class="col-12">
                            <label class="form-label small text-muted fw-bold">Email (Identifiant)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-0 shadow-sm ps-3 text-muted"><i class="bi bi-envelope"></i></span>
                                <InputText @bind-Value="_registerModel.Email" class="form-control bg-white border-0 shadow-sm" type="email" placeholder="name@example.com" />
                            </div>
                            <ValidationMessage For="@(() => _registerModel.Email)" />
                        </div>

                        <!-- Mots de passe -->
                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">Mot de passe</label>
                            <div class="input-group shadow-sm rounded">
                                <span class="input-group-text bg-white border-0 text-muted"><i class="bi bi-lock"></i></span>
                                <input type="@(_showPassword ? "text" : "password")" 
                                       class="form-control bg-white border-0" 
                                       placeholder="••••••••"
                                       @bind="_registerModel.Password" />
                                <button class="btn btn-white bg-white border-0 text-muted" type="button" 
                                        @onclick="() => _showPassword = !_showPassword">
                                    <i class="bi @(_showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => _registerModel.Password)" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label small text-muted fw-bold">Confirmation</label>
                            <div class="input-group shadow-sm rounded">
                                <span class="input-group-text bg-white border-0 text-muted"><i class="bi bi-lock-fill"></i></span>
                                <input type="@(_showConfirmPassword ? "text" : "password")" 
                                       class="form-control bg-white border-0" 
                                       placeholder="••••••••"
                                       @bind="_registerModel.ConfirmPassword" />
                                <button class="btn btn-white bg-white border-0 text-muted" type="button" 
                                        @onclick="() => _showConfirmPassword = !_showConfirmPassword">
                                    <i class="bi @(_showConfirmPassword ? "bi-eye-slash" : "bi-eye")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => _registerModel.ConfirmPassword)" />
                        </div>

                        <div class="col-12 my-2">
                             <div class="d-flex align-items-center text-muted small">
                                <hr class="flex-grow-1" />
                                <span class="mx-3 fw-bold text-uppercase" style="font-size: 0.7rem;">Coordonnées</span>
                                <hr class="flex-grow-1" />
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label small text-muted fw-bold">Téléphone</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-white border-0 text-muted"><i class="bi bi-phone"></i></span>
                                <InputText @bind-Value="_registerModel.Telephone" class="form-control bg-white border-0" placeholder="+33 6 12 34 56 78" />
                            </div>
                            <ValidationMessage For="@(() => _registerModel.Telephone)" />
                        </div>

                        <div class="col-12">
                            <label class="form-label small text-muted fw-bold">Adresse</label>
                            <InputText @bind-Value="_registerModel.Adresse" class="form-control bg-white border-0 shadow-sm" />
                        </div>
                        
                        <div class="col-md-4">
                            <label class="form-label small text-muted fw-bold">Code Postal</label>
                            <InputText @bind-Value="_registerModel.CodePostal" class="form-control bg-white border-0 shadow-sm" />
                        </div>
                        
                        <div class="col-md-4">
                            <label class="form-label small text-muted fw-bold">Ville</label>
                            <InputText @bind-Value="_registerModel.Ville" class="form-control bg-white border-0 shadow-sm" />
                        </div>
                         <div class="col-md-4">
                            <label class="form-label small text-muted fw-bold">Pays</label>
                            <InputText @bind-Value="_registerModel.Pays" class="form-control bg-white border-0 shadow-sm" />
                        </div>
                    </div>

                    <div class="d-grid gap-3 mt-5">
                        <button type="submit" class="btn btn-primary btn-lg shadow-lg hover-scale" disabled="@_isBusy">
                            @if (_isBusy) { <span class="spinner-border spinner-border-sm me-2"></span> }
                            CRÉER MON COMPTE
                        </button>
                        <div class="text-center">
                            <span class="text-muted">Déjà inscrit ?</span> 
                            <a href="login" class="text-primary fw-bold text-decoration-none hover-underline">Se connecter</a>
                        </div>
                    </div>
                </EditForm>
            </div>
             <div class="text-center mt-4 text-muted small">
                &copy; @DateTime.Now.Year Hippocampe Import-Export. Tous droits réservés.
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterClientRequestDto _registerModel = new() { Pays = "France" };
    private string? _errorMessage;
    private bool _isBusy = false;
    
    // Variables pour gérer l'affichage des mots de passe
    private bool _showPassword = false;
    private bool _showConfirmPassword = false;

	private async Task HandleRegistration()
    {
        _isBusy = true;
        _errorMessage = null;

        try
        {
            // Appel à l'API (qui envoie le mail de confirmation automatiquement si config OK)
            var success = await ApiService.RegisterClientAsync(_registerModel);
            
            if (success)
            {
                // Redirection avec le paramètre 'registered=true'
                // Le 'true' en 2ème argument force le rechargement complet (nécessaire pour nettoyer l'état Blazor)
                Navigation.NavigateTo("/login?registered=true", true);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = "Erreur : " + ExtractErrorMessage(ex.Message);
        }
        finally
        {
            _isBusy = false;
        }
    }

    private string ExtractErrorMessage(string raw)
    {
        if (raw.Contains("Email est déjà utilisé")) return "Cet email est déjà associé à un compte. Veuillez vous connecter ou contacter le support.";
        return raw.Replace("{", "").Replace("}", "").Replace("\"", "");
    }
}