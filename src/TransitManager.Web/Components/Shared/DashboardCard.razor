<div class="glass-panel p-4 h-100 d-flex flex-column hover-scale bg-gradient-@(Color)-soft" style="transition: transform 0.2s ease;">
    @if (!string.IsNullOrEmpty(Title) || Icon != null)
    {
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                @if (!string.IsNullOrEmpty(Title))
                {
                    <h6 class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                        @Title
                    </h6>
                }
                @if (!string.IsNullOrEmpty(Value))
                {
                    <h3 class="fw-bold m-0 text-gradient">@Value</h3>
                }
            </div>
            @if (Icon != null)
            {
                <div class="rounded-circle d-flex align-items-center justify-content-center bg-@(Color) bg-opacity-10 text-@(Color)" 
                     style="width: 48px; height: 48px;">
                    <i class="@Icon" style="font-size: 1.5rem;"></i>
                </div>
            }
        </div>
    }
    
    <div class="flex-grow-1">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Value { get; set; }
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string Color { get; set; } = "primary";
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
