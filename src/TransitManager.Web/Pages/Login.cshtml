@page
@{
    Layout = null;

    // Gestion des messages
    string errorMsg = "";
    string errorType = "";
    string until = "";
    bool showCountdown = false;
    bool showResetButton = false; // Nouveau drapeau
    bool showResendButton = false; // Nouveau drapeau
    bool showRegistrationSuccess = false; // Nouveau drapeau
    string targetEmail = ""; // Pour stocker l'email concerné

    // 1. Gestion des erreurs
    if (Request.Query.ContainsKey("error"))
    {
        errorType = Request.Query["error"];
        until = Request.Query["until"];
        if (errorType == "auth_failed")
        {
            errorMsg = "Email ou mot de passe incorrect.";
            showResetButton = true; // Activer le bouton reset
        }
        else if (errorType == "server_error") errorMsg = "Le serveur ne répond pas.";
        else if (errorType == "locked") showCountdown = true;
        else if (errorType == "invalid_input") errorMsg = "Veuillez remplir tous les champs.";
        else if (errorType == "unconfirmed")
        {
            errorMsg = "Votre adresse email n'a pas été confirmée.";
            showResendButton = true;
            if(Request.Query.ContainsKey("email")) targetEmail = Request.Query["email"];
        }
        else errorMsg = "Une erreur est survenue.";
    }
    // 2. Gestion succès inscription
    if (Request.Query.ContainsKey("registered") && Request.Query["registered"] == "true")
    {
        showRegistrationSuccess = true;
    }
    if (Request.Query.ContainsKey("resend") && Request.Query["resend"] == "success")
    {
        showRegistrationSuccess = true; // On réutilise le style vert
        // On change juste le message visuellement plus bas
    }
}
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connexion - Hippocampe Import-Export</title>
    <link rel="stylesheet" href="~/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/app.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f0f2f5;
            background-image: url('/images/background-pattern.png'); /* Si dispo */
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        .card-header-custom {
            background-color: white;
            padding: 2rem 1rem 1rem;
            text-align: center;
            cursor: pointer; /* Indique que c'est cliquable */
            transition: background-color 0.3s;
        }
        .card-header-custom:hover {
            background-color: #f8f9fa;
        }
        /* Lien discret pour le header */
        .home-link {
            text-decoration: none;
            color: inherit;
            display: block;
        }
        .logo-login {
            max-height: 100px;
            margin-bottom: 15px;
        }
        .company-name {
            color: #0d6efd;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 1.5rem;
            margin-bottom: 0;
        }
        /* ... (Gardez vos styles de loading-overlay existants ici) ... */
        .loading-overlay {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background-color: rgba(0, 0, 0, 0.7); backdrop-filter: blur(5px);
            display: flex; justify-content: center; align-items: center;
            z-index: 10000; flex-direction: column; color: white;
            opacity: 0; transition: opacity 0.3s ease-in-out; pointer-events: none;
        }
        .loading-overlay.active { opacity: 1; pointer-events: all; }
    </style>
</head>
<body>
    <!-- Overlay Chargement -->
    <div id="loading-overlay" class="loading-overlay">
        <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status"></div>
        <p class="mt-3 fw-bold">Connexion en cours...</p>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5 col-xl-4">
                <div class="card">

                    <!-- EN-TÊTE CLIQUABLE VERS ACCUEIL -->
                    <a href="/" class="home-link" title="Retour à l'accueil">
                        <div class="card-header-custom">
                            <img src="~/images/logo.jpg" alt="Logo" class="img-fluid logo-login" />
                            <h2 class="company-name">HIPPOCAMPE</h2>
                            <p class="text-muted small">IMPORT - EXPORT</p>
                        </div>
                    </a>
                    <div class="card-body p-4 pt-2">
                        <h4 class="text-center mb-4 fw-normal text-secondary">Espace Client</h4>

						<!-- Message succès inscription -->
						@if (showRegistrationSuccess)
						{
							<div class="alert alert-success text-center">
								<i class="bi bi-check-circle-fill fs-4 d-block mb-2"></i>
								@if(Request.Query["resend"] == "success")
								{
									<strong>Email envoyé !</strong><br />
									<text>Vérifiez votre boîte de réception (et vos spams).</text>
								}
								else
								{
									<strong>Compte créé avec succès !</strong><br />
									<text>Un email de confirmation vous a été envoyé.</text>
								}
							</div>
						}
                        <!-- Formulaire -->
                        <form id="loginForm" action="/account/login" method="post">
                            @Html.AntiForgeryToken()

                            <div class="form-group mb-3">
                                <label for="email" class="form-label fw-bold text-secondary small">EMAIL</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
                                    <input id="email" name="Email" type="email" class="form-control" placeholder="nom@exemple.com" required />
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label for="password" class="form-label fw-bold text-secondary small">MOT DE PASSE</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="bi bi-lock"></i></span>
                                    <input id="password" name="Password" type="password" class="form-control" placeholder="Votre mot de passe" required />
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                                        <i class="bi bi-eye" id="eyeIcon"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- AFFICHAGE ERREURS & BOUTON RESET -->
                            @if (showCountdown)
                            {
                                <div class="alert alert-warning">
                                    <strong>Compte verrouillé</strong><br/>
                                    Réessayez dans <span id="countdown">calcul...</span>
                                </div>
                                <script>
                                    /* Script countdown identique à avant */
                                    (function() {
                                        var untilStr = "@until";
                                        var unlockTime = new Date(untilStr).getTime();
                                        var timer = setInterval(function() {
                                            var now = new Date().getTime();
                                            var distance = unlockTime - now;
                                            if (distance < 0) { clearInterval(timer); document.getElementById("countdown").innerHTML = "MAINTENANT"; }
                                            else {
                                                var m = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                                                var s = Math.floor((distance % (1000 * 60)) / 1000);
                                                document.getElementById("countdown").innerHTML = m + "m " + s + "s";
                                            }
                                        }, 1000);
                                    })();
                                </script>
                            }
                            else if (!string.IsNullOrEmpty(errorMsg))
                            {
                                <div class="alert alert-danger text-center">
                                    <div><i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMsg</div>

                                    <!-- BOUTON RESET MOT DE PASSE (Conditionnel) -->
                                    @if (showResetButton)
                                    {
                                        <div class="mt-2 pt-2 border-top border-danger">
                                            <a href="/forgot-password" class="btn btn-sm btn-danger w-100">
                                                <i class="bi bi-key me-1"></i> Réinitialiser mon mot de passe
                                            </a>
                                        </div>
                                    }
                                    <!-- NOUVEAU BLOC : BOUTON RENVOYER EMAIL -->
                                    @if (showResendButton)
                                    {
                                        <div class="mt-2 pt-2 border-top border-danger">
                                            <form action="/account/resend-confirmation" method="post">
                                                @Html.AntiForgeryToken()
                                                <!-- Le nom "email" doit correspondre au paramètre [FromForm] string email du contrôleur -->
                                                <input type="hidden" name="email" value="@targetEmail" />
                                                <button type="submit" class="btn btn-sm btn-warning w-100 text-dark fw-bold">
                                                    <i class="bi bi-envelope-paper me-1"></i> Renvoyer l'email de validation
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            }

                            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">
                                SE CONNECTER
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <span class="text-muted">Nouveau client ?</span>
                            <a href="/register" class="text-decoration-none fw-bold ms-1">Créer un compte</a>
                        </div>
                         <div class="text-center mt-2">
                             <a href="/forgot-password" class="text-decoration-none small text-muted">Mot de passe oublié ?</a>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-center py-3 border-0">
                        <small class="text-muted">Support : 06 99 56 93 58</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            var x = document.getElementById("password");
            var icon = document.getElementById("eyeIcon");
            if (x.type === "password") {
                x.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                x.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }

        document.getElementById('loginForm').addEventListener('submit', function() {
            document.getElementById('loading-overlay').classList.add('active');
        });
    </script>
</body>
</html>